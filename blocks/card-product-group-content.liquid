<div class="card--block-content lg:absolute left-0 right-0 bottom-0" style="--max-sm-p: 1rem 0; --pl:{{ block.settings.padding_left }}px; --pr:{{ block.settings.padding_right }}px; --pt:{{ block.settings.padding_top }}px; --pb:{{ block.settings.padding_bottom }}px;">
    {% content_for "blocks" %}
</div>

{% schema %}
    {
        "name": "Group: Product content",
        "tag": null,
        "blocks": [{ "type": "spacer" }, { "type": "card-product-vendor-flex" }, { "type": "card-product-button-flex" }, { "type": "card-product-title-flex" }, { "type": "card-product-price-flex" }],
        "settings": [
            {
                "type": "product",
                "id": "product",
                "label": "t:sections.collage.blocks.product.settings.product.label"
            },
            {
                "type": "header",
                "content": "Padding"
            },
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 1,
                "default": 10,
                "label": "Top"
            },
            {
                "type": "range",
                "id": "padding_right",
                "min": 0,
                "max": 100,
                "step": 1,
                "default": 10,
                "label": "Right"
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 1,
                "default": 10,
                "label": "Bottom"
            },
            {
                "type": "range",
                "id": "padding_left",
                "min": 0,
                "max": 100,
                "step": 1,
                "default": 10,
                "label": "Left"
            }
        ],
        "presets": [
            {
                "name": "Group: Product content",
                "settings": {
                    "product": "{{ closest.product }}"
                },
                "blocks": [

                    {
                        "type": "card-product-vendor-flex",
                        "settings": {
                            "product": "{{ closest.product }}"
                        }
                    },
                    {
                        "type": "spacer",
                        "settings": {
                            "spacer_height": 10
                        }
                    },
                    {
                        "type": "card-product-title-flex",
                        "settings": {
                            "product": "{{ closest.product }}"
                        }
                    },
                    {
                        "type": "spacer",
                        "settings": {
                            "spacer_height": 10
                        }
                    },
                    {
                        "type": "card-product-price-flex",
                        "settings": {
                            "product": "{{ closest.product }}"
                        }
                    },
                    {
                        "type": "card-product-button-flex",
                        "settings": {
                            "product": "{{ closest.product }}"
                        }
                    }
                ]

            }
        ]
    }
{% endschema %}

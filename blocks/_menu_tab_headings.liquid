<div class="drawer__header flex justify-between items-center color-{{ block.settings.color_scheme }}">
  <div class="tabs-product-header flex overflow-x-a ">
    {%- content_for 'blocks' -%}
  </div>

  <button
    class="drawer__close block t-button bor-none cursor-pointer"
    type="button"
    onclick="this.closest('side-drawer').close()"
    aria-label="{{ 'accessibility.close_dialog' | t }}"
    style="--top: 0.3rem; --right: 0.3rem;"
  >
    {{- 'icon-close.svg' | inline_asset_content -}}
  </button>
</div>

{%- stylesheet -%}
{%- endstylesheet -%}

{% schema %}
{
  "name": "Menu tab heading",
  "tag": null,
  "blocks": [
    {
      "type": "_menu_tab_heading"
    }
  ],
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-3"
    }
  ],
  "presets": [
    {
      "name": "Tab heading",
      "settings": {}
    }
  ]
}
{% endschema %}

{% capture style %}
  {% if block.settings.inherit_color_scheme == false %}
    {% render 'color-scheme-style', settings: block.settings %}
  {% endif %}
{% endcapture %}

{%- capture class -%}
  category-item category-view-all shadow-style border-style relative overflow-hidden flex-center center link link--text
{%- endcapture -%}

<div class="{% if block.settings.inherit_color_scheme == false %} color-scheme-custom{% endif %}" style="{{ style }}">
  <a href="{{ block.settings.url }}" class="{{ class }}">
    {{- block.settings.url_label -}}
  </a>
</div>

{%- stylesheet -%}
  .category-view-all {
    display: flex;
    min-height: 10rem;
  }
{%- endstylesheet -%}



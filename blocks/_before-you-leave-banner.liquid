<div
  class="before-you-leave-banner size-style relative{% if block.settings.inherit_color_scheme == false %} color-scheme-custom{% endif %}"
  {{ block.shopify_attributes }}
  style="
    {% render 'size-style', settings: block.settings %}
    {% if block.settings.inherit_color_scheme == false %}
      {% render 'color-scheme-style', settings: block.settings %}
    {% endif %}
  "
>
  <div class="banner__media size-full">
    {% if block.settings.image != blank %}
      {% render 'image', image: block.settings.image %}
    {% else %}
      <div class="placeholder-image banner__media" style="--ratio: 1;">
        {{ 'hero-apparel-1' | placeholder_svg_tag: 'image-block__image placeholder-svg' }}
      </div>
    {% endif %}
  </div>
  <div class="banner__content absolute-c-c size-full" style="--p: var(--page-margin);">
    <div
      class="banner__box layout-panel-flex layout-panel-flex--column"
      style="{% render 'layout-panel-style', settings: block.settings, content_direction: 'column' %}"
    >
      {% content_for 'blocks' %}
    </div>
  </div>
</div>


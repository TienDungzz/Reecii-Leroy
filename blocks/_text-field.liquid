{%- liquid
    assign property_id = product.id | append: block.settings.heading | handleize
    assign property_name = block.settings.heading | escape
-%}
<div class="product-form__input text-field">
    <label for="{{ property_id }}" class="form-label form__label">{{ property_name }}</label>
    <input id="{{ property_id }}" type="text" name="properties[{{ property_name }}]" class="form__input form-input">
</div>


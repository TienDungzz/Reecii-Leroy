<div class="color-{{ section.settings.color_scheme }}">
  <div
    class="page-width page-width--{{ section.settings.page_width }}"
    style="--pl:{{ section.settings.padding_section }}px; --pr:{{ section.settings.padding_section }}px;"
  >
    <div
      class="flex-section wid-100 dis-flex f-{{ block.settings.direction }} f-{{ block.settings.wrap }} a-i-{{ block.settings.align_items}} j-c-{{ block.settings.justify_content }} {{ block.settings | class_list }} block-border{% if block.settings.border_left %}  block-border--left{% endif %} {% if block.settings.border_right %}  block-border--right{% endif %}{% if block.settings.border_top %}  block-border--top{% endif %}{% if block.settings.border_bottom %}  block-border--bottom{% endif %}"
      style="--pl:{{ block.settings.padding_left }}px; --pr:{{ block.settings.padding_right }}px; --pt:{{ block.settings.padding_top }}px; --pb:{{ block.settings.padding_bottom }}px; --gap-x: {{ block.settings.gap_x }}px; --gap-y: {{ block.settings.gap_y }}px; --gap-count: {{ block.blocks.size | minus: 1 }}"
      {{ section.shopify_attributes }}
    >
      {% content_for 'blocks' %}
    </div>
  </div>
</div>


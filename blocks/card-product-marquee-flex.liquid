{%- liquid
    assign card_product = block.settings.product
-%}
{%- if card_product and card_product != empty -%}
    <div class="card--block-marquee">
        {% render 'product-card-marquee', product: card_product, is_blocks: true %}  
    </div>
{%- endif -%}


{% schema %}
    {
        "name": "Product marquee",
        "tag": null,
        "settings": [
            {
                "type": "product",
                "id": "product",
                "label": "t:sections.collage.blocks.product.settings.product.label"
            }
        ],
        "presets": [
            {
                "name": "Product marquee",
                "settings": {
                    "product": "{{ closest.product }}"
                }
            }
        ]
    }
{% endschema %}

<details class="{{ block.settings | class_list }} details" {{ block.shopify_attributes }}>
  {% content_for 'block', type: 'collapsible-row-summary', id: 'collapsible-row-summary' %}
  {% content_for 'block', type: 'collapsible-row-details', id: 'collapsible-row-details' %}
  <div>
    {% content_for 'blocks' %}
  </div>
</details>

{% schema %}
{
  "name": "Collapsible row",
  "tag": null,
  "blocks": [{ "type": "@theme" }, { "type": "@app" }],
  "settings": [],
  "presets": [
    {
      "name": "Collapsible row",
      "blocks": [
        {
          "type": "collapsible-row-summary",
          "static": true,
          "id": "collapsible-row-summary",
          "blocks": [
            {
              "type": "icon",
              "id": "collapsible-row-icon",
              "static": true,
              "settings": {
                "icon": "check_mark",
                "width": 22
              }
            }
          ]
        },
        {
          "type": "collapsible-row-details",
          "static": true,
          "id": "collapsible-row-details",
          "blocks": [
            {
              "type": "icon",
              "id": "collapsible-row-icon",
              "static": true,
              "settings": {
                "icon": "check_mark",
                "width": 22
              }
            }
          ]
        },
        {
          "type": "group",
          "settings": {}
        }
      ]
    }
  ]
}
{% endschema %}

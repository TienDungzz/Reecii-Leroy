{%- liquid
    assign section_id = section.id
    assign card_product = block.settings.product
-%}

{%- if card_product and card_product != empty -%}
    <div class="card--block-group card-product__group pos-absolute top-0 right-0 z-index-2">
        {% comment %} ------ Wishlist ------ {% endcomment %}
        <div class="card-product__group-item card-wishlist">
            <wisht-list>
                <button type="button" title="{{ 'wishlist.general.add' | t }}" class="card-product__group-btn wishlist-button bor-circle bor-none center c-pointer dis-block pos-relative" data-wishlist data-wishlist-handle="{{ card_product.handle }}" data-product-id="{{ card_product.id }}">
                    <span class="text pointer-e-none pos-absolute-c-y z-index--1">
                        <span class="text-inner">{{ 'wishlist.general.add' | t }}</span>
                    </span>
                    {% render 'icon', icon: 'heart' %}
                </button>
            </wisht-list>
        </div>

        {% comment %} ------ Quick view ------ {% endcomment %}
        <div class="card-product__group-item card-quickview ">
            <button type="button" title="{{ 'products.product.quick_view' | t }}" class="card-product__group-btn quickview-button bor-circle bor-none center c-pointer dis-block pos-relative" data-product-id="{{ card_product.id }}" data-open-quick-view-popup data-product-handle="{{ card_product.handle }}">
                <span class="text pointer-e-none pos-absolute-c-y z-index--1">
                    <span class="text-inner">{{ 'products.product.quick_view' | t }}</span>
                </span>
                {% render 'icon', icon: 'eye' %}
            </button>
        </div>

        {% comment %} ------ Compare ------ {% endcomment %}
        <div class="card-product__group-item card-compare">
            <button type="button" title="{{ 'products.product.compare' | t }}" class="card-product__group-btn compare-button bor-circle bor-none center c-pointer dis-block pos-relative" data-compare data-compare-handle="{{ card_product.handle }}" data-product-id="{{ card_product.id }}">
                <span class="text pointer-e-none pos-absolute-c-y z-index--1">
                    <span class="text-inner">{{ 'products.product.compare' | t }}</span>
                </span>
                {% render 'icon', icon: 'compare' %}
            </button>
        </div>
    </div>
{%- endif -%}


{% schema %}
    {
        "name": "Group: Product buttons",
        "tag": null,
        "settings": [
            {
                "type": "product",
                "id": "product",
                "label": "t:sections.collage.blocks.product.settings.product.label"
            },
        ],
        "presets": [
            {
                "name": "Group: Product buttons",
                "settings": {
                    "product": "{{ closest.product }}"
                }
            }
        ]
    }
{% endschema %}
{%- liquid
  assign sec_stts = section.settings

  assign link = block.settings.collection.url

  assign max_tiems = sec_stts.products_to_show

  if sec_stts.collection.all_products_count > max_tiems
    assign more_in_collection = true
  endif
-%}

{%- if more_in_collection -%}
  {% render 'button', link: link, class: 'body-s-font-size' %}
{%- endif -%}


{% schema %}
{
  "name": "View all button",
  "tag": null,
  "settings": [
    {
      "type": "inline_richtext",
      "id": "label",
      "label": "t:settings.label",
      "default": "View all"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "checkbox",
      "id": "open_in_new_tab",
      "label": "t:settings.open_new_tab",
      "default": false
    },
    {
      "type": "select",
      "id": "style_class",
      "label": "t:settings.style",
      "options": [
        {
          "value": "button",
          "label": "t:options.primary"
        },
        {
          "value": "button-secondary",
          "label": "t:options.secondary"
        },
        {
          "value": "link",
          "label": "t:options.link"
        }
      ],
      "default": "button"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "t:settings.type",
      "visible_if": "{{ block.settings.style_class == 'button' or block.settings.style_class == 'button-secondary' }}",
      "options": [
        {
          "value": "default",
          "label": "t:options.default"
        },
        {
          "value": "outline",
          "label": "Outline"
        },
        {
          "value": "custom",
          "label": "t:options.custom"
        }
      ],
      "default": "default"
    },
    {
      "type": "header",
      "content": "t:content.link",
      "visible_if": "{{ block.settings.style_class == 'link' }}"
    },
    {
      "type": "select",
      "id": "button_type_size_link",
      "label": "t:settings.size",
      "visible_if": "{{ block.settings.style_class == 'link' }}",
      "options": [
        {
          "value": "",
          "label": "t:options.default"
        },
        {
          "value": "1.0rem",
          "label": "10px"
        },
        {
          "value": "1.2rem",
          "label": "12px"
        },
        {
          "value": "1.4rem",
          "label": "14px"
        },
        {
          "value": "1.6rem",
          "label": "16px"
        },
        {
          "value": "1.8rem",
          "label": "18px"
        },
        {
          "value": "2.0rem",
          "label": "20px"
        },
        {
          "value": "2.2rem",
          "label": "22px"
        },
        {
          "value": "2.4rem",
          "label": "24px"
        },
        {
          "value": "2.6rem",
          "label": "26px"
        },
        {
          "value": "2.8rem",
          "label": "28px"
        }
      ],
      "default": "1.2rem"
    },
    {
      "type": "checkbox",
      "id": "link_underline",
      "label": "t:options.underline",
      "default": false,
      "visible_if": "{{ block.settings.style_class == 'link' }}"
    },
    {
      "type": "checkbox",
      "id": "link_reveal",
      "label": "Reveal on hover",
      "default": false,
      "info": "Only works inside a Group block",
      "visible_if": "{{ block.settings.style_class == 'link' }}"
    },
    {
      "type": "header",
      "content": "t:content.size"
    },
    {
      "type": "select",
      "id": "width",
      "label": "t:settings.width_desktop",
      "options": [
        {
          "value": "fit-content",
          "label": "t:options.fit_content"
        },
        {
          "value": "custom",
          "label": "t:options.custom"
        }
      ],
      "default": "fit-content"
    },
    {
      "type": "range",
      "id": "custom_width",
      "label": "t:settings.custom_width",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 100,
      "visible_if": "{{ block.settings.width == 'custom' }}"
    },
    {
      "type": "select",
      "id": "width_mobile",
      "label": "t:settings.width_mobile",
      "options": [
        {
          "value": "fit-content",
          "label": "t:options.fit_content"
        },
        {
          "value": "custom",
          "label": "t:options.custom"
        }
      ],
      "default": "fit-content"
    },
    {
      "type": "range",
      "id": "custom_width_mobile",
      "label": "t:settings.custom_width",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 100,
      "visible_if": "{{ block.settings.width_mobile == 'custom' }}"
    }
  ],
  "presets": [
    {
      "name": "View all button",
      "category": "Collection",
      "settings": {
        "label": "View all",
        "collection": "{{ closest.collection }}"
      }
    }
  ]
}
{% endschema %}

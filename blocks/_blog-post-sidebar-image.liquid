{%- liquid
  assign bl_stts = block.settings
  assign text = bl_stts.text
  assign image = bl_stts.image
  assign collapse = bl_stts.collapse
  assign scroll_reveal = settings.animations_reveal_on_scroll

  assign link = bl_stts.link
  if link != blank
    assign link_attributes = 'href="' | append: link | append: '"'
    assign link_wrapper = '<a ' | append: link_attributes | append: 'title="' | append: image.alt | append: '"' | append: '>'
    assign link_wrapper_end = '</a>'
  endif

  assign collapse = bl_stts.collapse
  assign collapse_default = bl_stts.collapse_default
  if collapse == true
    assign element = 'sidebar-collapse'
    if collapse_default == 'open'
      assign aria_expanded = 'true'
    else
      assign aria_expanded = 'false'
    endif
  else
    assign element = 'div'
  endif
-%}

<{{element}} class="blog-post__sidebar-image blog-posts__sidebar-item">
  {% if text != blank %}
    <h3 class="blog-posts__sidebar-heading{% if scroll_reveal %} scroll-trigger animate--slide-in{% endif %}{% if collapse %} blog-posts__sidebar-collapse-button cursor-pointer{% endif %}">
      {{ text }}
    </h3>
  {%- elsif text == blank and collapse == true -%}
    <h3 class="blog-posts__sidebar-heading blog-posts__sidebar-collapse-button cursor-pointer">
      {{ 'content.sidebar.collapse' | t }}
    </h3>
  {% endif %}

  {% if collapse %}
    <div class="blog-posts__sidebar-collapse-content" aria-expanded="{{ aria_expanded }}">
  {% endif %}

  <div class="blog-post__sidebar-image-content{% if scroll_reveal %} scroll-trigger animate--slide-in{% endif %}">
    {%- if image != blank -%}
      {%- if link != blank -%}
        {{ link_wrapper }}
      {%- endif -%}
      {%- render 'image', image: image, class: 'blog-post__sidebar-image-img' -%}
      {%- if link != blank -%}
        {{ link_wrapper_end }}
      {%- endif -%}

    {%- else -%}
      <div class="placeholder">
        {{ 'collection-apparel-3' | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
    {%- endif -%}
  </div>

  {% if collapse %}
    </div>
  {% endif %}
</{{element}}>

{% schema %}
{
  "name": "Image",
  "tag": null,
  "settings": [
    {
      "type": "checkbox",
      "id": "collapse",
      "label": "Collapse",
      "default": false
    },
    {
      "type": "select",
      "id": "collapse_default",
      "label": "Collapse style",
      "visible_if": "{{ block.settings.collapse == true }}",
      "options": [
        {
          "value": "open",
          "label": "Open by default"
        },
        {
          "value": "close",
          "label": "Close by default"
        }
      ],
      "default": "close"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Heading",
      "default": "<p>Image</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    }
  ],
  "presets": [
    {
      "name": "Image"
    }
  ]
}
{% endschema %}

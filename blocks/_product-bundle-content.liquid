{%- liquid
  assign scroll_reveal = settings.animations_reveal_on_scroll
-%}

{% stylesheet %}
  .section-wrapper {
    --section-height-offset: 0px;
  }

  .section[data-shopify-visual-preview] {
    min-height: var(--section-preview-height);
    padding-top: 0;
  }

  .section[data-shopify-visual-preview] .custom-section-background {
    display: none;
  }

  body:has(> #header-group > .header-section > #header-component[transparent]):not(
      :has(> #header-group > .header-section + .shopify-section)
    )
    > main
    > .section-wrapper:first-child {
    --section-height-offset: var(--header-group-height, 0);
  }

  .custom-section-background {
    grid-column: 1 / -1;
  }

  .custom-section-content {
    z-index: var(--layer-flat);
  }
{% endstylesheet %}

{% capture children %}
  <div class="section-resource-list__header">
    {%- content_for 'block', type: '_blog-post-header', id: 'static-header' -%}
  </div>
  <div class="product-bundle-content w-full"
    {%- if request.visual_preview_mode -%}
      data-shopify-visual-preview
    {%- endif -%}
  >
    {%- assign space_between = block.settings.items_gap | times: 0.5 -%}
    {%- capture breakpoints -%}
      {
        "750": { "slidesPerView": 3, "space_between": {{ block.settings.items_gap | times: 0.75 }} },
        "1024": { "slidesPerView": 4, "space_between": {{ block.settings.items_gap }} }
      }
    {%- endcapture -%}
    <swiper-component
      class="product-bundle-carousel-swiper-component size-full block"
      {%- render 'swiper-data',
        settings: block.settings,
        slides_per_view: 2,
        space_between: space_between,
        watch_slides_progress: true,
        breakpoints: breakpoints
      -%}
      style="--items-gap: {{ block.settings.items_gap }}px;"
    >
      <div class="swiper size-full" style="--swiper-navigation-top-offset: 50%;">
        <ul
          id="Slider-{{ block.id }}"
          data-id="{{ block.id }}"
          class="swiper-wrapper grid-layout-no-js list-unstyled{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} lg:grid-layout--{{ columns_desktop }} md:grid-layout--{{ columns_tablet }} grid--{{ mobile_columns }}-col-mobile"
          style="--card-grid-per-row-desktop: {{ columns_desktop }}; --card-grid-per-row-tablet: {{ columns_tablet }}; --card-grid-per-row-mobile: {{ mobile_columns }};"
        >
          <li
            id="Slide-{{ product.id }}-1"
            class="bundle-product-item grid__item swiper-slide{% if scroll_reveal %} scroll-trigger animate--slide-in{% endif %} {% if product.available %} isChecked{% endif %}"
            {% if scroll_reveal %}
              style="--animation-order: 1;"
            {% endif %}
            data-bundle-product-item-id="{{ product.id }}"
          >
            {% content_for 'block',
              type: '_bundle-card-product',
              id: 'card-product-bundle',
              closest.product: product
            %}
          </li>
          {%- for product_item in product.metafields.custom.grouped_sub_product.value -%}
            <li
              id="Slide-{{ product_item.id }}-{{ forloop.index | plus: 1 }}"
              class="bundle-product-item grid__item swiper-slide{% if scroll_reveal %} scroll-trigger animate--slide-in{% endif %} {% if product_item.available %} isChecked{% endif %}"
              {% if scroll_reveal %}
                style="--animation-order: {{ forloop.index | plus: 1 }};"
              {% endif %}
              data-bundle-product-item-id="{{ product_item.id }}"
            >
              {% content_for 'block',
                type: '_bundle-card-product',
                id: 'card-product-bundle',
                closest.product: product_item
              %}
            </li>
          {%- endfor -%}
        </ul>

        <div class="swiper-btns-wrap small-hide">
          {%- render 'swiper-button' -%}
        </div>
      </div>
    </swiper-component>
  </div>
{% endcapture %}


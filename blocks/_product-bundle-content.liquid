{%- liquid
    assign scroll_reveal = settings.animations_reveal_on_scroll
-%}

{% stylesheet %}
  .section-wrapper {
    --section-height-offset: 0px;
  }

  .section[data-shopify-visual-preview] {
    min-height: var(--section-preview-height);
    padding-top: 0;
  }

  .section[data-shopify-visual-preview] .custom-section-background {
    display: none;
  }

  body:has(> #header-group > .header-section > #header-component[transparent]):not(
      :has(> #header-group > .header-section + .shopify-section)
    )
    > main
    > .section-wrapper:first-child {
    --section-height-offset: var(--header-group-height, 0);
  }

  .custom-section-background {
    grid-column: 1 / -1;
  }

  .custom-section-content {
    z-index: var(--layer-flat);
  }
{% endstylesheet %}

{% capture header %}
  <div class="section-resource-list__header">
    {%- content_for 'block', type: '_blog-post-header', id: 'static-header' -%}
  </div>
{% endcapture %}

{% capture list_items %}
    {%- for product_item in product.metafields.custom.grouped_sub_product.value -%}
        <li
            id="Slide-{{ sec_id }}-{{ product_item.id }}-{{ forloop.index }}"
            class="grid__item swiper-slide{% if scroll_reveal %} scroll-trigger animate--slide-in{% endif %}"
            {% if scroll_reveal %}
            style="--animation-order: {{ forloop.index | plus: max_tiems }};"
            {% endif %}
        >
            {% content_for 'block',
            type: 'card-product-flex',
            id: 'product-slide-item',
            closest.product: product_item
            %}
        </li>
    {%- endfor -%}
{% endcapture %}

{% capture main %}
  <div class="product-bundle-block w-full"
    {%- if request.visual_preview_mode -%}
        data-shopify-visual-preview
    {%- endif -%}
  >
    {%- assign spaceBetween = block.settings.items_gap | times: 0.5 -%}
    {%- capture breakpoints -%}
        {
            "750": { "slidesPerView": 3, "spaceBetween": {{ block.settings.items_gap | times: 0.75 }} },
            "1024": { "slidesPerView": 4, "spaceBetween": {{ block.settings.items_gap }} }
        }
    {%- endcapture -%}
    <swiper-component
        class="product-bundle-carousel-swiper-component size-full block"
        {%- render 'swiper-data',
            settings: block.settings,
            slides_per_view: 2,
            space_between: spaceBetween,
            watch_slides_progress: true,
            breakpoints: breakpoints
        -%}
    >
        <div class="swiper size-full" style="--swiper-navigation-top-offset: 50%;">
            <ul
                id="Slider-{{ block.id }}"
                data-id="{{ block.id }}"
                class="swiper-wrapper grid-layout-no-js list-unstyled{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} lg:grid-layout--{{ columns_desktop }} md:grid-layout--{{ columns_tablet }} grid--{{ mobile_columns }}-col-mobile"
                style="--card-grid-per-row-desktop: {{ columns_desktop }}; --card-grid-per-row-tablet: {{ columns_tablet }}; --card-grid-per-row-mobile: {{ mobile_columns }};"
            >
                {{ list_items }}
            </ul>

            <div class="swiper-btns-wrap small-hide">
            {%- render 'swiper-button' -%}
            </div>
        </div>
    </swiper-component>
  </div>
{% endcapture %}

<div class="section-background color-{{ block.settings.color_scheme }}"></div>
<div
  class="section section--{{ block.settings.section_width }} color-{{ block.settings.color_scheme }}"

  {% if request.visual_preview_mode %}
    data-shopify-visual-preview
  {% endif %}

  style="
    {% if block.settings.section_width == 'custom' %}
      --page-content-width: {{ block.settings.page_width_custom | divided_by: 10 }}rem;
      --page-width: calc(var(--page-content-width) + var(--page-margin) * 2);
    {% endif %}
    {% if block.settings.section_height == 'custom' %}
      --section-min-height: {{ block.settings.section_height_custom }}svh;
    {% elsif block.settings.section_height == 'full-screen' %}
      --section-min-height: 100svh;
    {% elsif block.settings.section_height != '' %}
      --section-min-height: var(--section-height-{{ block.settings.section_height }});
    {% endif %}

    {% if block.settings.section_height != '' %}
      --section-preview-height: 600px;
    {% endif %}

    {% if block.settings.content_direction == 'row' or block.settings.content_direction_mobile == 'row' %}
      --header-width: {{ block.settings.header_width }}%;
    {% endif %}
  "
>
  <div class="custom-section-background">
    {% render 'background-media',
      background_media: block.settings.background_media,
      background_video: block.settings.video,
      background_video_position: block.settings.video_position,
      background_image: block.settings.background_image,
      background_image_position: block.settings.background_image_position,
      image_behavior: block.settings.image_behavior
    %}
  </div>

  <div
    class="border-style custom-section-content"
    style="{% render 'border-override', settings: block.settings %}"
  >
    {% if block.settings.toggle_overlay %}
      {% render 'overlay', settings: block.settings, layer: '0' %}
    {% endif %}

    <product-bundle
      class="
        product-bundle-content
        spacing-style
        layout-panel-flex
        layout-panel-flex--{{ block.settings.content_direction }}
        mobile-{{ block.settings.content_direction_mobile | default: 'column' }}
        section-content-wrapper
        arrow-on-header
      "
      style="
        {% render 'layout-panel-style', settings: block.settings %}
        {% render 'spacing-style', settings: block.settings %}
        --gap: calc(var(--gap-scale, 1.0) * {{ block.settings.blocks_gap }}px);
      "
      data-testid="section-content"
    >
      {{ header }}
      {{ main }}
    </product-bundle>
  </div>
</div>


{% comment %} [START block.markup] {% endcomment %}
 {%- liquid
    assign link = block.settings.link
    assign text = block.settings.text
-%}

<div
  class="{{ block.settings | class_list }} text-block"
  {{ block.shopify_attributes }}
>
  {%- if block.settings.text != blank -%}
    {%- render 'link', block: block, link: link, text: text -%}
  {%- endif -%}
</div>
{% comment %} [END block.markup] {% endcomment %}

{% comment %} [START block.preset] {% endcomment %}
{% schema %}
{
  "name": "Button",
  "tag": null,
  "settings": [
    {
      "type": "inline_richtext",
      "id": "text",
      "label": "Label",
      "default": "Button label"
    },
    {
      "type": "url",
      "id": "link",
      "label": "t:settings_schema.global.settings.button.link.label"
    }
  ],
  "presets": [
    { "name": "Button" }
  ]
}
{% endschema %}
{% comment %} [END block.preset {% endcomment %}
  
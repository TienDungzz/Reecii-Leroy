{% stylesheet %}
{% endstylesheet %}

{% comment %} [START block.markup] {% endcomment %}
<div
  class="{{ block.settings | class_list }} text-block"
  {{ block.shopify_attributes }}
>
  {%- if block.settings.text != blank -%}
    <a
      {% if block.settings.link == blank %}
        role="link" aria-disabled="true"
      {% else %}
        href="{{ block.settings.link }}"
      {% endif %}
      class="button"
    >
      {{ block.settings.text }}
    </a>
  {%- endif -%}
</div>
{% comment %} [END block.markup] {% endcomment %}

{% comment %} [START block.preset] {% endcomment %}
{% schema %}
{
  "name": "Button",
  "tag": null,
  "settings": [
    {
      "type": "inline_richtext",
      "id": "text",
      "label": "t:settings_schema.global.settings.button_label.label",
      "default": "Button label"
    },
    {
      "type": "url",
      "id": "link",
      "label": "t:settings_schema.global.settings.button_link.label"
    }
  ],
  "presets": [
    { "name": "Button" }
  ]
}
{% endschema %}
{% comment %} [END block.preset {% endcomment %}
  
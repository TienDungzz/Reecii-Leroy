<div
  class="footer-block footer-block--{{ block.id }} {% if block.settings.width_grid_item > 50 %} full-width-tablet{% endif %} pos-{{ block.settings.alignment }} pos-mb-{{ block.settings.alignment_mb }} footer-col grid__item block block-border{% if block.settings.border_left %}  block-border--left{% endif %} {% if block.settings.border_right %}  block-border--right{% endif %}{% if block.settings.border_top %}  block-border--top{% endif %}{% if block.settings.border_bottom %}  block-border--bottom{% endif %}"{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
  style="--width-footer-col: {{ block.settings.width_grid_item }}%; --width-footer-col-mb: {{ block.settings.width_grid_item_mb }}%; --pl:{{ block.settings.padding_left }}px; --pr:{{ block.settings.padding_right }}px; --pt:{{ block.settings.padding_top }}px; --pb:{{ block.settings.padding_bottom }}px;"
>
  {% content_for 'blocks' %}
</div>

{% schema %}
{
  "name": "Group: Footer column",
  "tag": null,
  "blocks": [
    { "type": "@app" },
    { "type": "email-signup" },
    { "type": "spacer" },
    { "type": "text" },
    { "type": "heading-column" },
    { "type": "text-with-icon" },
    { "type": "footer-link-list" },
    { "type": "country-selector" },
    { "type": "group-footer-row" },
    { "type": "payment-icons" },
    { "type": "social-icons" },
    { "type": "copyright" },
    { "type": "image" },
    { "type": "button" }
  ],
  "settings": [
    {
      "type": "header",
      "content": "t:sections.footer.settings.grid_item.label"
    },
    {
      "type": "range",
      "id": "width_grid_item",
      "min": 15,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "t:sections.footer.settings.grid_item.options__1.label",
      "info": "t:sections.footer.settings.grid_item.options__1.info",
      "default": 25
    },
    {
      "type": "range",
      "id": "width_grid_item_mb",
      "min": 15,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "t:sections.footer.settings.grid_item.options__2.label",
      "info": "t:sections.footer.settings.grid_item.options__2.info",
      "default": 50
    },
    {
      "type": "header",
      "content": "t:sections.footer.settings.alignment.label"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "t:sections.footer.settings.alignment.label",
      "default": "left",
      "options": [
        {
          "value": "left",
          "label": "t:sections.footer.settings.alignment.left"
        },
        {
          "value": "center",
          "label": "t:sections.footer.settings.alignment.center"
        },
        {
          "value": "right",
          "label": "t:sections.footer.settings.alignment.right"
        }
      ]
    },
    {
      "type": "select",
      "id": "alignment_mb",
      "label": "t:sections.footer.settings.alignment.label__2",
      "default": "left",
      "info": "t:sections.footer.settings.alignment.info",
      "options": [
        {
          "value": "left",
          "label": "t:sections.footer.settings.alignment.left"
        },
        {
          "value": "center",
          "label": "t:sections.footer.settings.alignment.center"
        },
        {
          "value": "right",
          "label": "t:sections.footer.settings.alignment.right"
        }
      ]
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0,
      "label": "t:settings_schema.global.settings.spacing.spacing_top.label"
    },
    {
      "type": "range",
      "id": "padding_right",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0,
      "label": "t:settings_schema.global.settings.spacing.spacing_right.label"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0,
      "label": "t:settings_schema.global.settings.spacing.spacing_bottom.label"
    },
    {
      "type": "range",
      "id": "padding_left",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0,
      "label": "t:settings_schema.global.settings.spacing.spacing_left.label"
    },
    {
      "type": "header",
      "content": "Border"
    },
    {
      "type": "checkbox",
      "id": "border_left",
      "label": "Left border",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "border_right",
      "label": "Right border",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "border_top",
      "label": "Top border",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "border_bottom",
      "label": "Bottom border",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Group: Footer column",
      "category": "t:categories.footer"
    }
  ]
}
{% endschema %}

          </a>
        </li>
      {%- endif -%}
    </ul>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Social icons",
  "settings": [
    {
      "type": "range",
      "id": "gap_x",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 10,
      "label": "Column Gap"
    },
    {
      "type": "range",
      "id": "gap_y",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 10,
      "label": "Row Gap"
    }
  ],
  "presets": [
    {
      "name": "Social icons"
    }
  ]
}
{% endschema %}

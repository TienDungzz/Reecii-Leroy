{%- liquid
  assign social_icons = true
  if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
    assign social_icons = false
  endif
-%}

<div
  class="group-block{% if block.settings.inherit_color_scheme == false %} color-scheme-custom{% endif %} group-block--{{ block.id }} page-width utility-bar__grid flex-section w-full flex flex-{{ block.settings.content_direction }} flex-{{ block.settings.wrap }} items-{{ block.settings.align_items}} justify-{{ block.settings.justify_content }} utility-bar {% if block.settings.show_line_separator %} utility-bar--bottom-border{% endif %}"
  style="
    --pl:{{ block.settings.padding_left }}px;
    --pr:{{ block.settings.padding_right }}px;
    --pt:{{ block.settings.padding_top }}px;
    --pb:{{ block.settings.padding_bottom }}px;
    --gap-x: {{ block.settings.gap_x }}px;
    --gap-y: {{ block.settings.gap_y }}px;
    {% if block.settings.inherit_color_scheme == false %}
      {% render 'color-scheme-style', settings: block.settings %}
    {% endif %}
  "
  {{ block.shopify_attributes }}
>
  {%- style -%}
    .group-block--{{ block.id }} > .grid__item {
      width: calc(var(--width-header-col) - var(--gap-x) * {{ block.blocks.size |  minus: 1 }} / {{  block.blocks.size }});
      max-width: calc(var(--width-header-col) - var(--gap-x) * {{ block.blocks.size | minus: 1 }} / {{  block.blocks.size }});
    }
  {%- endstyle -%}
  {% content_for 'blocks' %}
</div>
{% comment %} [END nesting.block_render] {% endcomment %}


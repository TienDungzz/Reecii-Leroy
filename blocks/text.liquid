<div
  class="{{ block.settings | class_list }} text-block body-{{block.settings.text_size}}-font-size"
  {{ block.shopify_attributes }}
>
  {{ block.settings.text }}
</div>

{% schema %}
{
  "name": "Text",
  "tag": null,
  "settings": [
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Welcome to our store</p>"
    },
    {
      "type": "select",
      "id": "text_size",
      "label": "t:typography.settings.body_size.label",
      "info": "t:typography.settings.body_size.info",
      "options": [
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "3xl",
          "label": "t:typography.settings.body_size.options__1.label"
        },
        {
          "value": "2xl",
          "label": "t:typography.settings.body_size.options__2.label"
        },
        {
          "value": "xl",
          "label": "t:typography.settings.body_size.options__3.label"
        },
        {
          "value": "l",
          "label": "t:typography.settings.body_size.options__4.label"
        },
        {
          "value": "m",
          "label": "t:typography.settings.body_size.options__5.label"
        },
        {
          "value": "s",
          "label": "t:typography.settings.body_size.options__6.label"
        },
        {
          "value": "xs",
          "label": "t:typography.settings.body_size.options__7.label"
        },
        {
          "value": "xxs",
          "label": "t:typography.settings.body_size.options__8.label"
        }
      ],
      "default": "default"
    }
  ],
  "presets": [{ "name": "Text" }]
}
{% endschema %}
{% comment %} [END block.preset {% endcomment %}

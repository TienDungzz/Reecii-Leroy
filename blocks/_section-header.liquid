{%- liquid
  assign bl_stts = block.settings

  assign p_left = bl_stts.padding_left
  assign p_right = bl_stts.padding_right
  assign p_top = bl_stts.padding_top
  assign p_bottom = bl_stts.padding_bottom

  assign mt = bl_stts.margin_top
  assign mb = bl_stts.margin_bottom

  assign gap_x = bl_stts.gap_x
  assign gap_y = bl_stts.gap_y
-%}
{%- capture children -%}
  {%- content_for 'blocks' -%}
{%- endcapture -%}

{%- capture styles -%}
  style="{%- if p_left != 0 -%}--pl:{{ p_left }}px;{%- endif -%}
  {%- if p_top != 0 -%}--pt:{{ p_top }}px;{%- endif -%}
  {%- if p_bottom != 0 -%}--pb:{{ p_bottom }}px;{%- endif -%}
  {%- if p_right != 0 -%}--pr:{{ p_right }}px;{%- endif -%}
  {%- if gap_x != 0 -%}--gap-x: {{ gap_x }}px;{%- endif -%}
  {%- if gap_y != 0 -%}--gap-y: {{ gap_y }}px;{%- endif -%}
  {%- if mt != 0 -%}--mt: {{ mt }}px;{%- endif -%}
  {%- if mb != 0 -%}--mb: {{ mb }}px;{%- endif -%}

  {%- render 'layout-panel-style', settings: bl_stts -%}
  {%- if bl_stts.border != 'none' -%}
    {%- render 'border-override', settings: bl_stts -%}
  {%- endif -%}
  {% if bl_stts.inherit_color_scheme == false %}
    {% render 'color-scheme-style', settings: bl_stts %}
  {% endif %}
  "
{%- endcapture -%}

{%- capture class -%}
  section-header--block layout-panel-flex layout-panel-flex--{{ bl_stts.content_direction }} group-block group-block--{{block.id}} flex-section w-full{% if bl_stts.inherit_color_scheme == false %} color-scheme-custom{% endif %}
  {% if bl_stts.border != 'none' %} border-style{% endif %}
{%- endcapture -%}

<div
  class="{{ bl_stts | class_list }} {{ class }}"
  {{ block.shopify_attributes }}
  {{ styles }}
>
  {{ children }}
</div>

{%- stylesheet -%}
  .section-header--block.border-style {
    border-width: 0 0 var(--border-width) 0;
  }
{%- endstylesheet -%}

{% schema %}
{
  "name": "t:names.section_header",
  "blocks": [
    { "type": "@theme" },
    { "type": "@app" },
    { "type": "spacer" },
    { "type": "text" },
    { "type": "_collection_title" },
    { "type": "_view_all_button" },
    { "type": "button" }
  ],
  "settings": [
    {
      "type": "header",
      "content": "t:content.size"
    },
    {
      "type": "select",
      "id": "width_option",
      "label": "t:settings.width_option",
      "options": [
        {
          "value": "full",
          "label": "t:options.full"
        },
        {
          "value": "custom",
          "label": "t:options.custom"
        }
      ],
      "default": "custom"
    },
    {
      "type": "range",
      "id": "custom_width",
      "label": "t:settings.custom_percent",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "%",
      "default": 80,
      "visible_if": "{{ block.settings.width_option == 'custom' }}"
    },
    {
      "type": "header",
      "content": "t:content.appearance"
    },
    {
      "type": "checkbox",
      "id": "inherit_color_scheme",
      "label": "t:settings.inherit_color_scheme",
      "default": true
    }, 
    {
      "type": "color",
      "id": "scheme_background",
      "label": "t:settings.background",
      "default": "#FFFFFF",
      "alpha": true,
      "visible_if": "{{ block.settings.inherit_color_scheme == false }}"
    },
    {
      "type": "color_background",
      "id": "scheme_background_gradient",
      "label": "t:content.background_gradient",
      "info": "t:info.background_gradient_info",
      "visible_if": "{{ block.settings.inherit_color_scheme == false }}"
    },
    {
      "type": "color",
      "id": "scheme_foreground_heading",
      "label": "t:settings.headings",
      "default": "#000000",
      "alpha": true,
      "visible_if": "{{ block.settings.inherit_color_scheme == false }}"
    },
    {
      "type": "color",
      "id": "scheme_foreground",
      "label": "t:settings.text",
      "default": "#000000",
      "alpha": true,
      "visible_if": "{{ block.settings.inherit_color_scheme == false }}"
    },
    {
      "type": "color",
      "id": "scheme_primary",
      "label": "t:settings.primary_color",
      "default": "#000F9F",
      "alpha": true,
      "visible_if": "{{ block.settings.inherit_color_scheme == false }}"
    },
    {
      "type": "color",
      "id": "scheme_primary_hover",
      "label": "t:settings.primary_hover_color",
      "default": "#000000",
      "alpha": true,
      "visible_if": "{{ block.settings.inherit_color_scheme == false }}"
    },
    {
      "type": "color",
      "id": "scheme_border",
      "label": "t:settings.borders",
      "default": "#E6E6E6",
      "alpha": true,
      "visible_if": "{{ block.settings.inherit_color_scheme == false }}"
    },
    {
      "type": "color",
      "id": "scheme_shadow",
      "label": "t:settings.shadow",
      "default": "#000000",
      "alpha": true,
      "visible_if": "{{ block.settings.inherit_color_scheme == false }}"
    },
    {
      "type": "header",
      "content": "t:content.margin"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:settings.top",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:settings.bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0,
      "label": "t:settings.top"
    },
    {
      "type": "range",
      "id": "padding_right",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0,
      "label": "t:settings.right"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0,
      "label": "t:settings.bottom"
    },
    {
      "type": "range",
      "id": "padding_left",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0,
      "label": "t:settings.left"
    },
    {
      "type": "header",
      "content": "t:content.layout"
    },
    {
      "type": "select",
      "id": "content_direction",
      "label": "t:settings.direction",
      "options": [
        {
          "value": "column",

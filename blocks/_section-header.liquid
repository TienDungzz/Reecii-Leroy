      "default": "none"
    },
    {
      "type": "range",
      "id": "border_width",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:settings.thickness",
      "default": 2,
      "visible_if": "{{ block.settings.border != 'none' }}"
    }
  ],
  "presets": [
    {
      "name": "t:names.section_header"
    }
  ]
}
{% endschema %}

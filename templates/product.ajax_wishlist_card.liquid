{% layout none %}

<div class="product{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}">
    {% if settings.product_card_layout == '02' %}
        {% comment %} {% render 'product-card-02'
        , product_card_product: product
        , portrait_aspect_ratio: '125'
        , complementary_product_button_atc: true
        , serial: forloop.index
        , sectionId: 'list-result-wishlist'
        %}   {% endcomment %}
    {% endif %}
    
    
    {% render 'card-product',
        card_product: product,
        media_aspect_ratio: '125',
        show_secondary_image: true,
        show_vendor: false,
        show_rating: false,
        lazy_load: false,
        skip_styles: false,
        section_id: 'list-result-wishlist',
        serial: forloop.index,
        quick_add: false
    %}

</div>
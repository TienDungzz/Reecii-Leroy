{% assign bl_stts = block.settings %}

<div
  class="cart-items__wrapper spacing-style"
  style="{% render 'spacing-style', settings: bl_stts %}"
  {{ block.shopify_attributes }}
>
  {% if cart.empty? %}
    <div class="cart__warnings">
      <h1 class="cart__empty-text">{{ 'content.empty' | t }}</h1>
      <a href="{{ routes.all_products_collection_url }}" class="button">
        {{ 'content.continue_shopping' | t }}
      </a>

      {%- if shop.customer_accounts_enabled and customer == null -%}
        <h2 class="cart__login-title">{{ 'content.login.title' | t }}</h2>
        <p class="cart__login-paragraph">
          {{ 'content.login.paragraph_html' | t: link: routes.account_login_url }}
        </p>
      {%- endif -%}
    </div>
  {%- else -%}
    <span
      class="cart-item-count visually-hidden"
      aria-hidden="true"
    >
      {{- cart.item_count -}}
    </span>
    <form
      action="{{ routes.cart_url }}"
      class="cart__contents critical-hidden"
      method="post"
      id="cart"
    >
      <div 
        class="cart__items" id="main-cart-items" 
        data-id="{{ section.id }}"
        style="--cart-items-gap:{{ bl_stts.gap | append: "px" }};"
      >
        <div class="js-contents">
          {%- if cart != empty -%}
            <table 
              class="cart-items cart-items__table"
              role="table"
            >
              <caption
                class="visually-hidden"
                role="caption"
              >
                {{ 'content.cart_total' | t }}
                <span>{{ cart.total_price | money_with_currency }}</span>
              </caption>
              <thead role="rowgroup">
                <tr
                  role="row"
                  class="cart-items__table-row"
                >
                  <th
                    id="productImage"
                    class="cart-items__table-heading cart-item__media caption-with-letter-spacing--medium font-bold"
                    scope="col"
                    role="columnheader"
                  >
                    <span>{{ 'content.product' | t }}</span>
                  </th>
                  <th
                    id="productInformation"
                    class="cart-items__table-heading cart-item__details caption-with-letter-spacing--medium font-bold"
                    scope="col"
                    role="columnheader"
                  >
                    <span class="visually-hidden">{{ 'content.product_information' | t }}</span>
                  </th>
                  <th
                    id="productPrice"
                    class="cart-items__table-heading cart-item__price small-hide center caption-with-letter-spacing--medium font-bold"
                    scope="col"
                    role="columnheader"
                  >
                    <span>{{ 'content.price' | t }}</span>
                  </th>
                  <th
                    id="productTotalMobile"
                    class="cart-items__table-heading cart-item__totals medium-hide large-up-hide right caption-with-letter-spacing--medium font-bold"
                    scope="col"
                    role="columnheader"
                  >
                    <span>{{ 'content.total' | t }}</span>
                  </th>
                  <th
                    id="quantity"
                    class="cart-items__table-heading cart-item__quantity cart-items__heading--wide cart-items__heading--quantity small-hide center caption-with-letter-spacing--medium font-bold"
                    scope="col"
                    role="columnheader"
                  >
                    <span>{{ 'content.quantity' | t }}</span>
                  </th>
                  <th
                    id="productTotal"
                    class="cart-items__table-heading cart-item__totals small-hide center caption-with-letter-spacing--medium font-bold"
                    scope="col"
                    role="columnheader"
                  >
                    <span>{{ 'content.total' | t }}</span>
                  </th>
                  <th
                    id="productRemove"
                    class="cart-items__table-heading right caption-with-letter-spacing--medium font-bold"
                    scope="col"
                    role="columnheader"
                  >
                    <span class="visually-hidden">{{ 'content.remove' | t }}</span>
                  </th>
                </tr>
              </thead>

              <tbody role="rowgroup">
                {%- for item in cart.items -%}
                  <tr 
                    role="row" 
                    class="cart-item cart-items__table-row{% if item.parent_relationship.parent != null %} cart-items__nested-line{% endif %}{% if bl_stts.border == true %} cart-items--border{% endif %}" 
                    data-line="{{ item.index | plus: 1 }}"
                    id="CartItem-{{ item.index | plus: 1 }}"
                  >
                    <td
                      class="cart-item__media"
                      role="cell"
                      headers="productImage"
                    >
                      {% if item.image %}
                        {% liquid
                          assign ratio = 1
                          
                          if bl_stts.image_ratio == 'portrait'
                            assign ratio = 0.8
                          elsif bl_stts.image_ratio == 'adapt'
                            assign ratio = item.image.aspect_ratio
                          endif
                        %}
                        <a href="{{ item.url }}" class="cart-item__link" aria-hidden="true" tabindex="-1"></a>
                        <div 
                          class="cart-item__image-container"
                          style="--aspect-ratio:{{ ratio }};"
                        >
                          <img
                            src="{{ item.image | image_url: width: 300 }}"
                            class="cart-item__image"
                            alt="{{ item.image.alt | escape }}"
                            loading="lazy"
                            width="150"
                            height="{{ 150 | divided_by: item.image.aspect_ratio | ceil }}"
                          >
                        </div>
                      {% endif %}
                    </td>
                    <td
                      class="cart-item__details"
                      role="cell"
                      headers="productInformation"
                    >
                      {%- if bl_stts.vendor -%}
                        <p class="caption-with-letter-spacing">{{ item.product.vendor }}</p>
                      {%- endif -%}

                      <a href="{{ item.url }}" class="cart-item__name break">{{ item.product.title | escape }}</a>

                      {%- if item.product.has_only_default_variant == false
                        or item.properties.size != 0
                        or item.selling_plan_allocation != null
                      -%}
                        {%- if item.product.has_only_default_variant == false -%}
                          <div class="product-option flex items-center gap-sm">
                            {{ item.variant.title }}

                            {%- if settings.show_cart_quick_edit -%}
                              <edit-cart>
                                <button
                                  type="button"
                                  class="product-edit button-unstyled cursor-pointer"
                                  data-modal="#halo-edit-cart-popup"
                                  data-open-edit-cart
                                  data-edit-cart-url="{{ item.url }}&view=ajax_edit_cart"
                                  data-edit-cart-id="{{ item.id }}"
                                  data-edit-cart-quantity="{{ item.quantity }}"
                                  data-line="{{ item.key }}"
                                  data-index="{{ item.index | plus: 1 }}"
                                  title="{{ 'content.cart.edit_title' | t: title: item.variant.title }}"
                                >
                                  <span class="svg-wrapper">
                                    {% render 'icon-edit' %}
                                  </span>
                                </button>
                              </edit-cart>
                            {%- endif -%}
                          </div>
                        {%- endif -%}

                        <p class="product-option">{{ item.selling_plan_allocation.selling_plan.name }}</p>
                      {%- endif -%}

                      <ul class="discounts list-unstyled" role="list" aria-label="{{ 'customer.order.discount' | t }}">
                        {%- for discount in item.line_level_discount_allocations -%}
                          <li class="discounts__discount">
                            {{- 'icon-discount.svg' | inline_asset_content -}}
                            {{ discount.discount_application.title | escape }}
                          </li>
                        {%- endfor -%}
                      </ul>
                    </td>
                    <td
                      class="cart-item__price relative"
                      role="cell"
                      headers="productPrice"
                    >
                      <text-loader-component>
                        {%- render 'loading-spinner' -%}
                        <div class="cart-item__price-wrapper">
                          {%- if item.original_price != item.final_price -%}
                            <dl class="cart-item__discounted-prices">
                              <dt class="visually-hidden">
                                {{ 'products.product.price.regular_price' | t }}
                              </dt>
                              <dd class="center">
                                <s class="cart-item__old-price price price--end">
                                  {{ item.original_price | money }}
                                </s>
                              </dd>
                              <dt class="visually-hidden">
                                {{ 'products.product.price.sale_price' | t }}
                              </dt>
                              <dd class="price price--end center">
                                {{ item.final_price | money }}
                              </dd>
                            </dl>
                          {%- else -%}
                            <span class="price price--end center">
                              {{ item.original_price | money }}
                            </span>
                          {%- endif -%}

                          {%- if item.variant.available and item.unit_price_measurement -%}
                            <div class="unit-price caption center">
                              <span class="visually-hidden">{{ 'products.product.price.unit_price' | t }}</span>
                              {{ item.unit_price | money }}
                              <span aria-hidden="true">/</span>
                              <span class="visually-hidden"
                                >&nbsp;{{ 'accessibility.unit_price_separator' | t }}&nbsp;</span
                              >
                              {%- if item.unit_price_measurement.reference_value != 1 -%}
                                {{- item.unit_price_measurement.reference_value -}}
                              {%- endif -%}
                              {{ item.unit_price_measurement.reference_unit }}
                            </div>
                          {%- endif -%}
                        </div>
                      </text-loader-component>
                    </td>
                    <td
                      class="cart-item__totals right medium-hide large-up-hide"
                      role="cell"
                      headers="productTotalMobile"
                    >
                      <text-loader-component>
                        {%- render 'loading-spinner' -%}
                        <div class="cart-item__price-wrapper">
                          {%- if item.original_line_price != item.final_line_price -%}
                            <dl class="cart-item__discounted-prices">
                              <dt class="visually-hidden">
                                {{ 'products.product.price.regular_price' | t }}
                              </dt>
                              <dd class="center">
                                <s class="cart-item__old-price price price--end">
                                  {{ item.original_line_price | money }}
                                </s>
                              </dd>
                              <dt class="visually-hidden">
                                {{ 'products.product.price.sale_price' | t }}
                              </dt>
                              <dd class="price price--end center">
                                {{ item.final_line_price | money }}
                              </dd>
                            </dl>
                          {%- else -%}
                            <span class="price price--end center">
                              {{ item.original_line_price | money }}
                            </span>
                          {%- endif -%}

                          {%- if item.variant.available and item.unit_price_measurement -%}
                            <div class="unit-price caption center">
                              <span class="visually-hidden">{{ 'products.product.price.unit_price' | t }}</span>
                              {{ item.unit_price | money }}
                              <span aria-hidden="true">/</span>
                              <span class="visually-hidden"
                                >&nbsp;{{ 'accessibility.unit_price_separator' | t }}&nbsp;</span
                              >
                              {%- if item.unit_price_measurement.reference_value != 1 -%}
                                {{- item.unit_price_measurement.reference_value -}}
                              {%- endif -%}
                              {{ item.unit_price_measurement.reference_unit }}
                            </div>
                          {%- endif -%}
                        </div>
                      </text-loader-component>
                    </td>
                    <td
                      class="cart-item__quantity"
                      role="cell"
                      headers="quantity"
                    >
                      {% liquid
                        assign variant = item.product.selected_or_first_available_variant
                        assign can_update_quantity = item.instructions.can_update_quantity | default: true, allow_false: true
                      %}
                      <quantity-selector-component
                        class="quantity-selector"
                        {% if item.index == null %}
                          {{- block.shopify_attributes -}}
                        {% endif %}
                      >
                        <button
                          class="button quantity-minus button-unstyled"
                          type="button"
                          name="minus"
                          onclick="this.closest('quantity-selector-component').dispatchEvent(new CustomEvent('decreaseQuantity', { bubbles: true }))"
                          {% if can_update_quantity == false %}
                            disabled
                          {% endif %}
                        >
                          <span class="visually-hidden">{{ 'accessibility.decrease_quantity' | t }}</span
                          ><span class="svg-wrapper icon-plus">
                            {{- 'icon-minus.svg' | inline_asset_content -}}
                          </span>
                        </button>
                        <input
                          class="quantity__input"
                          type="number"
                          name="{% if item.index %}updates[]{% else %}quantity{% endif %}"
                          value="{{ item.quantity | default: 1 }}"
                          min="0"
                          data-index="{{ item.index | plus: 1 }}"
                          aria-label="{{ 'accessibility.quantity' | t }}"
                          {% if item.index %}
                            data-cart-line="{{ item.index | plus: 1 }}"
                          {% endif %}
                          {% if variant.quantity_rule.max %}
                            max="{{ variant.quantity_rule.max }}"
                          {% endif %}
                          step="{{ variant.quantity_rule.increment | default: 1 }}"
                          {% if can_update_quantity == false or variant.available == false %}
                            disabled
                          {% endif %}
                        >
                        <button
                          class="button quantity-plus button-unstyled"
                          type="button"
                          name="plus"
                          onclick="this.closest('quantity-selector-component').dispatchEvent(new CustomEvent('increaseQuantity', { bubbles: true }))"
                          {% if can_update_quantity == false %}
                            disabled
                          {% endif %}
                        >
                          <span class="visually-hidden">{{ 'accessibility.increase_quantity' | t }}</span
                          ><span class="svg-wrapper icon-plus">
                            {{- 'icon-plus.svg' | inline_asset_content -}}
                          </span>
                        </button>
                      </quantity-selector-component>
                      <div class="cart-item__error" id="Line-item-error-{{ item.index | plus: 1 }}" role="alert">
                        <small class="cart-item__error-text"></small>
                        <span class="svg-wrapper">
                          {{- 'icon-error.svg' | inline_asset_content -}}
                        </span>
                      </div>
                    </td>
                    <td
                      class="cart-item__totals right small-hide"
                      role="cell"
                      headers="productTotal"
                    >
                      <text-loader-component>
                        {%- render 'loading-spinner' -%}
                        <div class="cart-item__price-wrapper">
                          {%- if item.original_line_price != item.final_line_price -%}
                            <dl class="cart-item__discounted-prices">
                              <dt class="visually-hidden">
                                {{ 'products.product.price.regular_price' | t }}
                              </dt>
                              <dd class="center">
                                <s class="cart-item__old-price price price--end">
                                  {{ item.original_line_price | money }}
                                </s>
                              </dd>
                              <dt class="visually-hidden">
                                {{ 'products.product.price.sale_price' | t }}
                              </dt>
                              <dd class="price price--end center">
                                {{ item.final_line_price | money }}
                              </dd>
                            </dl>
                          {%- else -%}
                            <span class="price price--end center">
                              {{ item.original_line_price | money }}
                            </span>
                          {%- endif -%}

                          {%- if item.variant.available and item.unit_price_measurement -%}
                            <div class="unit-price caption center">
                              <span class="visually-hidden">{{ 'products.product.price.unit_price' | t }}</span>
                              {{ item.unit_price | money }}
                              <span aria-hidden="true">/</span>
                              <span class="visually-hidden"
                                >&nbsp;{{ 'accessibility.unit_price_separator' | t }}&nbsp;</span
                              >
                              {%- if item.unit_price_measurement.reference_value != 1 -%}
                                {{- item.unit_price_measurement.reference_value -}}
                              {%- endif -%}
                              {{ item.unit_price_measurement.reference_unit }}
                            </div>
                          {%- endif -%}
                        </div>
                      </text-loader-component>
                    </td>

                    <td
                      class="cart-item__remove"
                      role="cell"
                      headers="productRemove"
                    >
                      <button
                        class="button cart-items__remove"
                        type="button"
                        aria-label="{{ 'accessibility.remove_item' | t: title: item.title | escape }}"
                        onclick="this.closest('cart-items-component').dispatchEvent(new CustomEvent('onLineItemRemove', {detail: { line: {{ item.index | plus: 1 }} }, bubbles: true}))" 
                        {% assign can_remove = item.instructions.can_remove | default: true, allow_false: true %}
                        {% if can_remove == false %}
                          hidden
                        {% endif %}
                      >
                        <span class="svg-wrapper icon-remove">
                          {{- 'icon-close.svg' | inline_asset_content -}}
                        </span>
                        <span class="visually-hidden">
                          {{ 'content.remove_title' | t: title: item.title | escape }}
                        </span>
                      </button>
                    </td>
                  </tr>
                {%- endfor -%}
              </tbody>
            </table>
          {%- endif -%}
        </div>
      </div>

      <p class="visually-hidden" id="cart-live-region-text" aria-live="polite" role="status"></p>
      <p
        class="visually-hidden"
        id="shopping-cart-line-item-status"
        aria-live="polite"
        aria-hidden="true"
        role="status"
      >
        {{ 'accessibility.loading' | t }}
      </p>
    </form>
  {%- endif -%}
</div>

{% comment %}
  Renders social icons.
  Accepts:
  - class: {String} a class to be added to the <ul> element (optional).

  Usage:
  {% render 'social-icons',
    class: 'my-class'
  %}
{% endcomment %}

{%- liquid
  if settings.social_twitter_link != blank or settings.social_facebook_link != blank or settings.social_pinterest_link != blank or settings.social_instagram_link != blank or settings.social_youtube_link != blank or settings.social_vimeo_link != blank or settings.social_tiktok_link != blank or settings.social_tumblr_link != blank or settings.social_snapchat_link != blank
    assign social_links = true
  endif
-%}

{%- if social_links -%}
  {{ 'component-list-social.css' | asset_url | stylesheet_tag }}
  <div class="flex flex-wrap justify-center flex-column h-full">
    <ul
      class="list-unstyled list-social flex flex-wrap justify-end sm\:justify-center{% if class %} {{ class}}{% endif %}"
      role="list"
      style="--gap-x: 1.1rem; --gap-y: 1.1rem;"
    >
      {%- if settings.social_twitter_link != blank -%}
        <li class="list-social__item">
          <a href="{{ settings.social_twitter_link }}" class="list-social__link link">
            <span class="svg-wrapper">
              {{- 'icon-twitter.svg' | inline_asset_content -}}
            </span>
            <span class="visually-hidden">{{ 'general.social.links.twitter' | t }}</span>
          </a>
        </li>
      {%- endif -%}

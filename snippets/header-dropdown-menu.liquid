{% comment %}
  Renders a standard dropdown style menu for the header.

  Usage:
  {% render 'header-dropdown-menu' %}
{% endcomment %}

<header-menu>
  <details id="Details-HeaderMenu-{{ forloopIndex }}" class="details--dropdown dropdown-menu" is="dropdown-details" activate-event="hover">
    <summary
      id="HeaderMenu-{{ link.handle }}"
      class="details__summary header__menu-item list-menu__item link focus-inset"
    >
      <span
        {%- if link.child_active %}
          class="header__active-menu-item"
        {% endif %}
      >
        {{- link.title | escape -}}
      </span>
      {{- 'icon-caret.svg' | inline_asset_content -}}
    </summary>
    <ul
      id="HeaderMenu-MenuList-{{ forloopIndex }}"
      class="details__list header__submenu list-menu list-menu--disclosure z-index-1 color-{{ section.settings.menu_color_scheme }} gradient caption-large motion-reduce global-settings-popup"
      role="list"
      tabindex="-1"
    >
      {%- for childlink in link.links -%}
        <li>
          {%- if childlink.links == blank -%}
            <a
              id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
              href="{{ childlink.url }}"
              class="header__menu-item list-menu__item link link--text focus-inset caption-large{% if childlink.current %} list-menu__item--active{% endif %}"
              {% if childlink.current %}
                aria-current="page"
              {% endif %}
            >
              {{ childlink.title | escape }}
            </a>
          {%- else -%}
            <details id="Details-HeaderSubMenu-{{ link.handle }}-{{ childlink.handle }}" class="pos-relative" is="dropdown-details" activate-event="hover">
              <summary
                id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                class="details__summary header__menu-item link link--text list-menu__item focus-inset caption-large"
              >
                <span>{{ childlink.title | escape }}</span>
                {{- 'icon-caret.svg' | inline_asset_content -}}
              </summary>
              <ul
                id="HeaderMenu-SubMenuList-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                class="details__list header__submenu list-menu list-menu--disclosure top-0 left-100 z-index-1 gradient motion-reduce global-settings-popup"
              >
                {%- for grandchildlink in childlink.links -%}
                  <li>
                    <a
                      id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                      href="{{ grandchildlink.url }}"
                      class="header__menu-item list-menu__item link link--text focus-inset caption-large{% if grandchildlink.current %} list-menu__item--active{% endif %}"
                      {% if grandchildlink.current %}
                        aria-current="page"
                      {% endif %}
                    >
                      {{ grandchildlink.title | escape }}
                    </a>
                  </li>
                {%- endfor -%}
              </ul>
            </details>
          {%- endif -%}
        </li>
      {%- endfor -%}
    </ul>
  </details>
</header-menu>

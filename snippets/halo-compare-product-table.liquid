<div class="halo-compareProduct-content">
	<div class="halo-compareProduct-table custom-scrollbar-x relative max-w-full max-h-full overflow-x-a">
		<table class="compareTable relative">
			<thead>
				<tr class="compareTable-row">
					{%- assign headings = 'product,sku,description,collection,availability,product_type,other_details' | split: ',' -%}
					{%- for heading in headings -%}
						<th class="compareTable-heading center font-bold uppercase body-l-font-size"><span class="compareTable-headingText whitespace-nowrap">{{ 'content.compare.' | append: heading | t }}</span></th>
					{%- endfor -%}
				</tr>
			</thead>
			<tbody></tbody>
		</table>
	</div>
</div>
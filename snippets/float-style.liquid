{%- liquid
    assign properties = 'horizontal,vertical' | split: ','
    assign devices = 'desktop,mobile' | split: ','
-%}
{%- capture variables -%}
    {%- for device in devices -%}
        {%- for property in properties -%}
            {%-liquid
                assign name = property
                if device == 'desktop'
                    assign name = name | append: '-desktop'
                elsif device == 'mobile'
                    assign name = name | append: '-mobile'
                endif
                assign setting_id = name
                assign value = settings[setting_id]
            -%}
            {%- if value != blank -%}
                --{{ name }}: {{ value }}%;
            {%- endif -%}
        {%- endfor -%}
    {%- endfor -%}
{%- endcapture -%}
{{- variables | strip | strip_newlines -}}
{%- capture sizes -%}
   '(min-width: 750px) 50vw, 100vw'
{%- endcapture -%}

{%- liquid
    assign f_media = card_product.featured_media
    assign media = card_product.media

    assign sizes = sizes

    assign f_widths = widths | default: '240, 352, 832, 1200'
    assign m_widths = widths | default: '240, 352, 832, 1200'

    unless lazy_load == false
        assign loading = "lazy"
    endunless
-%}

<div class="card__media block{% if image_shape and image_shape != 'default' %} shape--{{ image_shape }} color-{{ settings.card_color_scheme }}{% endif %}">
    <div class="media media--transparent media--hover-effect">
        {{ f_media | image_url: width: 1200 | image_tag: sizes: sizes , widths: f_widths, loading: 'lazy', alt: f_media.alt, class: 'motion-reduce test121212121212', loading: loading }}
        {%- if media[1] != null and show_secondary_image -%}
            {%- case media[1].media_type -%}
                {%- when 'image' -%}
                    {{ media[1] | image_url: width: 1200 | image_tag: sizes: sizes, widths: m_widths, loading: 'lazy', alt: media.alt, class: 'motion-reduce test121212121212', loading: 'lazy' }}
                {%- when 'video', 'external_video' -%}
                    {%- render 'video',
                        video: media[1],
                        widths: widths,
                        sizes: sizes,
                        loading: loading,
                        disable_controls: true,
                        video_autoplay: true,
                        video_loop: true,
                        video_id: media[1].id,
                        section_id: section.id
                    -%}
            {%- endcase -%}
        {%- endif -%}
    </div>
    <a href="{{ card_product.url }}" class="full-unstyled-link link-wrap z-2" aria-labelledby="MediaStandardCardNoMediaLink-{{ section_id }}-{{ card_product.id }}" id="MediaStandardCardNoMediaLink-{{ section_id }}-{{ card_product.id }}">
        <span class="visually-hidden">{{ card_product.title | escape }}</span>
    </a>
</div>
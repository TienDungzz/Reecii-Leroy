    --border-button-multiLevel-categories: {{ settings.border_button_filter_color }};
    --hover-color-button-multiLevel-categories: {{ settings.hover_text_button_filter_color }};
    --hover-bg-button-multiLevel-categories: {% if settings.hover_bg_gradient_button_filter_color != blank %}{{ settings.hover_bg_gradient_button_filter_color }}{% else %}{{ settings.hover_bg_button_filter_color }}{% endif %};
  }

  @media screen and (width >= 750px) {
    :root {
      --page-margin: 4rem;
    }
  }

  *,
  *::before,
  *::after {
    box-sizing: inherit;
  }

  html {
    box-sizing: border-box;
    font-size: 62.5%;
    height: 100%;
  }

  body {
    display: grid;
    grid-template-rows: auto auto 1fr auto;
    grid-template-columns: 100%;
    min-height: 100%;
    margin: 0;
    font-size: var(--font-body--size);
    line-height: var(--font-body--line-height);

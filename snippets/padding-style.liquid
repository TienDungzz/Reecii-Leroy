{%- comment -%}
  Intended for blocks and sections that provide values for all the referenced settings.
  Accepts:
    settings: {block.settings || section.settings}
{%- endcomment -%}

{%- if settings.width == 'custom' -%}
  --padding-style-vertical: {{ settings.custom_padding_vertical }}px;
  --padding-style-horizontal: {{ settings.custom_padding_horizontal }}px;
{%- else -%}
  --padding-style-vertical: var(--button-padding-vertical);
  --padding-style-horizontal: var(--button-padding-horizontal);
{%- endif -%}

{% if settings.width_mobile == 'custom' %}
  --padding-style-vertical-mobile: {{ settings.custom_padding_vertical_mobile }}px;
  --padding-style-horizontal-mobile: {{ settings.custom_padding_horizontal_mobile }}px;
{%- else -%}
  --padding-style-vertical-mobile: var(--button-padding-vertical);
  --padding-style-horizontal-mobile: var(--button-padding-horizontal);
{%- endif -%}

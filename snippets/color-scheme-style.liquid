{%- comment -%}
  Intended for blocks and sections that provide values for all the referenced settings.
  Accepts:
     settings: {block.settings || section.settings}
{%- endcomment -%}

{%- if settings.background_gradient != empty and settings.background_gradient -%}
  --color-background: {{ settings.background_gradient }};
{%- elsif settings.background -%}
  --color-background: rgb({{ settings.background.rgba }});
{%- endif -%}

{%- if settings.background -%}
--color-background-rgb: {{ settings.background.rgb }};
{%- endif -%}


<hover-button class="swiper-button swiper-button-prev {{ class_prev }}">
  <span class="svg-wrapper">
    {%- render 'icon-arrow' -%}
  </span>
</hover-button>
<hover-button class="swiper-button swiper-button-next {{ class_next }}">
  <span class="svg-wrapper">
    {%- render 'icon-arrow' -%}
  </span>
</hover-button>

{% stylesheet %}
  .swiper-button {
    overflow: hidden;
    &:before {
      content: '';
      position: absolute;
      inset: 0;
      background-color: var(--arrow-background-hover);
      z-index: -1;
      border-radius: var(--arrow-radius);
      display: block;
      transition: transform 0.3s ease;
      transform: scaleX(0);
    }
    &.swiper-button-prev {
      &:before {
        transform-origin: left;
      }
    }
    &.swiper-button-next {
      &:before {
        transform-origin: right;
      }
    }

    &:hover {
      &:before {
        transform: scaleX(1);
      }

      &.swiper-button-prev {
      &:before {
        transform-origin: right;
      }
    }
    &.swiper-button-next {
      &:before {
        transform-origin: left;
      }
    }
    }
  }

  .swiper-button:hover {
    color: var(--arrow-color-hover);
  }
{% endstylesheet %}
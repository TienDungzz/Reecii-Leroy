{{ 'template-collection.css' | asset_url | stylesheet_tag }}

{% if section.settings.image_shape == 'blob' %}
  {{ 'mask-blobs.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- if section.settings.quick_add != 'none' -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- liquid
  assign sec_id = section.id
  assign sec_stts = section.settings

  assign products_to_display = sec_stts.collection.all_products_count

  assign max_tiems = sec_stts.products_to_show

  if sec_stts.collection.all_products_count > max_tiems
    assign products_to_display = max_tiems
    assign more_in_collection = true
  endif

  assign columns_mobile_int = sec_stts.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if sec_stts.swipe_on_mobile and products_to_display > columns_mobile_int
    assign show_mobile_slider = true
  endif

  assign columns_tablet = 2
  if sec_stts.columns_desktop == 1
    assign columns_tablet = 1
  elsif sec_stts.columns_desktop >= 4
    assign columns_tablet = 3
  endif

  assign section_collections = sec_stts.collection.products | default: (1..max_tiems)
  assign section_collections_list = sec_stts.collection_list

  assign enable_navigation = false
  if sec_stts.navigation == 'arrows-pagination' or sec_stts.navigation == 'arrows'
    assign enable_navigation = true
  endif

  assign enable_pagination = false
  if sec_stts.navigation == 'pagination' or sec_stts.navigation == 'arrows-pagination'
    assign enable_pagination = true
  endif

  assign layout_type = sec_stts.layout_type

  assign has_media_banner = false
  if sec_stts.banner_image != blank or sec_stts.video != blank or sec_stts.video_url != blank
    assign has_media_banner = true
  elsif sec_stts.banner_image == blank and layout_type == 'widget'
    assign has_media_banner = true
  endif

  assign is_widget = false
  if layout_type == 'widget'
    assign is_widget = true
  endif

  assign widget_layout = sec_stts.widget_layout

  assign section_has_settings_media = false
  if layout_type == 'grid' or layout_type == 'tabs-grid' or layout_type == 'tabs-carousel' or layout_type == 'widget' or layout_type == 'carousel' 
    assign section_has_settings_media = true
  endif

  assign has_video = false
  if sec_stts.video != blank or sec_stts.video_url != blank
    assign has_video = true
  endif

  assign pos_media_banner = sec_stts.position
  if widget_layout == 'spotlight'
    assign pos_media_banner = 'right'
  endif

  assign show_more_product = false
  if sec_stts.show_more_product and collections[sec_stts.collection].all_products_count > max_tiems
    assign show_more_product = true
  endif

-%}

{%- stylesheet -%}
  .tabs-product-header__item {
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    &.--active {
      color: #232323;
      background: #f8f8f8;
    }
  }
  @media screen and (width <= 750px) {
    .swiper-component-mobile .swiper-wrapper {
      flex-wrap: nowrap;
      gap: 0px;
    }

    .swiper-component-mobile .grid__item.swiper-slide {
      max-width: 100%;
    }
  }
  .collection-coursel-swiper-component.full-width .swiper {
   overflow: visible;
  }

  .collection-coursel-swiper-component.full-width .swiper-btns-wrap {
    position: absolute;
    width: 100%;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    z-index: 1;
  }

  .product-infinite-scroll {
    margin-top: 5.5rem;
  }

  .section--featured-collection .content-inside-media {
   padding: 3rem 1rem;

   .content-inside-media__inner {
     max-width: 500px;
   }
  }

{%- endstylesheet -%}

<div
  class="section section--{{ sec_stts.page_width }} color-{{ sec_stts.color_scheme }} gradient pos-relative z-index-0 spacing"
  style=" --p-spacing-t: {{ sec_stts.padding_top }}px;--p-spacing-b: {{ sec_stts.padding_bottom }}px;"
>
  <div>
    {%- liquid
      assign heading_type_preset = sec_stts.heading_type_preset
      assign heading_font = sec_stts.heading_font
      assign heading_font_size = sec_stts.heading_font_size
      assign heading_case = sec_stts.heading_case
      assign heading_margin_bottom = sec_stts.heading_margin_bottom

      if heading_font_size contains 'heading-lg' or heading_font_size contains 'heading-xl'
        assign heading_type = 'display'
      elsif heading_font_size contains 'heading'
        assign heading_type = 'heading'
      else
        assign heading_type = 'body'
      endif
      if heading_type_preset == 'rte' or heading_type_preset == 'paragraph'
        assign is_heading_rte = true
      endif

      assign subheading_type_preset = sec_stts.subheading_type_preset
      assign subheading_font = sec_stts.subheading_font
      assign subheading_font_size = sec_stts.subheading_font_size
      assign subheading_case = sec_stts.subheading_case
      assign subheading_margin_bottom = sec_stts.subheading_margin_bottom

      if subheading_font_size contains 'heading-lg' or subheading_font_size contains 'heading-xl'
        assign subheading_type = 'display'
      elsif subheading_font_size contains 'heading'
        assign subheading_type = 'heading'
      else
        assign subheading_type = 'body'
      endif
      if subheading_type_preset == 'rte' or subheading_type_preset == 'paragraph'
        assign is_subheading_rte = true
      endif

      assign text_type_preset = sec_stts.text_type_preset
      assign text_font = sec_stts.text_font
      assign text_font_size = sec_stts.text_font_size
      assign text_case = sec_stts.text_case
      assign text_margin_bottom = sec_stts.text_margin_bottom

      if text_font_size contains 'heading-lg' or text_font_size contains 'heading-xl'
        assign text_type = 'display'
      elsif text_font_size contains 'heading'
        assign text_type = 'heading'
      else
        assign text_type = 'body'
      endif
      if text_type_preset == 'rte' or text_type_preset == 'paragraph'
        assign is_text_rte = true
      endif

      assign content_media_position = sec_stts.content_media_position
      assign content_media_alignment = sec_stts.content_media_alignment
      
    -%}

      {%- capture heading_block_classes -%}
        {%- if heading_type_preset == 'custom' -%} custom-typography
          {%- if heading_font_size != 'default' %} {{ heading_type }}-{{ heading_font_size }}-font-size {% endif -%}
          {% if is_heading_rte -%} rte {% endif -%}
        {% endif %}
      {%- endcapture -%}

      {%- capture subheading_block_classes -%}
        {%- if subheading_type_preset == 'custom' -%} custom-typography
          {%- if subheading_font_size != 'default' %} {{ subheading_type }}-{{ subheading_font_size }}-font-size {% endif -%}
          {% if is_subheading_rte -%} rte {% endif -%}
        {% endif %}
      {%- endcapture -%}

      {%- capture text_block_classes -%}
        {%- if text_type_preset == 'custom' -%} custom-typography
          {%- if text_font_size != 'default' %} {{ text_type }}-{{ text_font_size }}-font-size {% endif -%}
          {% if is_text_rte -%} rte {% endif -%}
        {% endif %}
      {%- endcapture -%}

      {% capture attributes %}
        class=" spacing-style {{ heading_type_preset }} {{ heading_block_classes }} content-inside-media__heading"
        style="--margin-block-end: {{ heading_margin_bottom | divided_by: 10.0 }}rem;{% render 'typography-style', preset: heading_type_preset, font: heading_font, font_size: heading_font_size, case: heading_case %}"
      {% endcapture %}

      {% capture attributes_subheading %}
        class=" spacing-style {{ subheading_type_preset }} {{ subheading_block_classes }} content-inside-media__subheading"
        style="--margin-block-end: {{ subheading_margin_bottom | divided_by: 10.0 }}rem;{% render 'typography-style', preset: subheading_type_preset, font: subheading_font, font_size: subheading_font_size, case: subheading_case %}"
      {% endcapture %}

      {% capture attributes_text %}
        class=" spacing-style {{ text_type_preset }} {{ text_block_classes }} content-inside-media__text"
        style="--margin-block-end: {{ text_margin_bottom | divided_by: 10.0 }}rem;{% render 'typography-style', preset: text_type_preset, font: text_font, font_size: text_font_size, case: text_case %}"
      {% endcapture %}

    {%- capture content_insde_media -%}
      {% if sec_stts.content_heading != blank or sec_stts.content_subheading != blank or sec_stts.content_text != blank %}
        <div class="content-inside-media pos-absolute-c-c wid-100 hei-100 dis-flex a-i-{{content_media_position}} j-c-center {{ content_media_alignment }}">
          <div class="content-inside-media__inner">
            {% if sec_stts.content_heading != blank %}
              <h3 {{ attributes }}>{{ sec_stts.content_heading }}</h3>
            {% endif %}
            {% if sec_stts.content_subheading != blank %}
              <h4 {{ attributes_subheading }}>{{ sec_stts.content_subheading }}</h4>
            {% endif %}
            {% if sec_stts.content_text != blank %}
              <div {{ attributes_text }}>{{ sec_stts.content_text }}</div>
            {% endif %}
            {% if sec_stts.content_button_label != blank %}
              {% render 'button', link: sec_stts.content_button_link, style_class: sec_stts.content_button_style, label: sec_stts.content_button_label %}
            {% endif %}
          </div>
        </div>
      {% endif %}
    {%- endcapture -%}
    
    {%- capture banner_image_html -%}
      {% if sec_stts.banner_image != blank %}
        {%- liquid
          assign ratio = sec_stts.media_ratio
          assign image_height = sec_stts.banner_image.width | divided_by: sec_stts.banner_image.aspect_ratio
        -%}
        <figure class="collection-banner mar-0 media media-block media--{{ ratio }}" style="--media-image-fit: {{ sec_stts.image_position }};{% if ratio == 'adapt' %}--media-adapt-ratio: {{ sec_stts.banner_image.aspect_ratio }};{% endif %}">
          {%- render 'image', 
            image: sec_stts.banner_image,
            class: 'collection-banner__image media-block__image', 
            height: image_height,
          -%}
          <figcaption class="collection-banner__caption">
            {{ content_insde_media }}
          </figcaption>
        </figure>
      {% elsif sec_stts.banner_image == blank and sec_stts.layout_type == 'widget' %}
          {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
      {% endif %}
    {%- endcapture -%}

    {%- capture banner_video_html -%}
      {%- liquid
        assign ratio = sec_stts.media_ratio
      -%}
      {{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}
      {% capture video_style %}
        --size-style-width: 100%; --size-style-width-mobile: 100%;
        --media-image-fit: {{ sec_stts.image_position }};
        {% if ratio == 'adapt' %}
          --media-adapt-ratio: {% if sec_stts.video_url != blank %}16/9{% else %}{{ sec_stts.video.aspect_ratio }}{% endif %};
        {% endif %}
      {% endcapture %}
      <div class="collection-banner">
        <figure class="video-wrapper mar-0">
          <div class="video-inner">
            {% if section.settings.source == 'uploaded' %}
              {% render 'video',
                video: sec_stts.video,
                video_class: 'spacing-style size-style border-style',
                video_loop: sec_stts.video_loop,
                video_autoplay: sec_stts.video_autoplay,
                video_style: video_style,
                video_ratio: ratio,
                video_preview_image: sec_stts.banner_image,
                additional_attributes: section.shopify_attributes,
                section_id: sec_id,
                section: section
              %}
            {% else %}
              {% render 'video',
                video_from_url: true,
                video: sec_stts.video_url.id,
                video_class: 'spacing-style size-style border-style',
                video_type: sec_stts.video_url.type,
                video_autoplay: sec_stts.video_autoplay,
                video_style: video_style,
                video_ratio: ratio,
                video_alt: sec_stts.alt,
                video_preview_image: sec_stts.banner_image,
                additional_attributes: section.shopify_attributes,
                section_id: sec_id,
                section: section
              %}
            {% endif %}
          </div>

          <figcaption class="video-wrapper__caption">
            {{ content_insde_media }}
          </figcaption>
        </figure>
      </div>
    {%- endcapture -%}

    <div
      class="collection{% if sec_stts.quick_add == 'bulk' %} collection-quick-add-bulk{% endif %}{% if sec_stts.full_width %} collection--full-width{% endif %}"
      id="collection-{{ sec_id }}"
      data-id="{{ sec_id }}"
      data-product-block
    >
      <div class="section-global__header">
        {%- content_for 'block', type: '_section-header', id: 'section-header' -%}
      </div>

      {% capture list_items %} 
        {% for product in section_collections limit: max_tiems %}
          <li id="Slide-{{ sec_id }}-{{ product.id }}-{{ forloop.index }}" class="grid__item{% if show_mobile_slider or sec_stts.layout_type == 'carousel' or sec_stts.layout_type == 'widget' %} swiper-slide{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {% if settings.animations_reveal_on_scroll %} style="--animation-order: {{ forloop.index }};"{% endif %}
          >
            {% content_for "block", type: "card-product-flex", id: "product-slide-item", closest.product: product %}
          </li>
          
          {% unless forloop.last %}
            <!--@list/split-->
          {% endunless %}

        {% endfor %} 
      {% endcapture %}

      {%- liquid
        assign list_items_array = list_items | strip | split: '<!--@list/split-->'

        assign media_size = sec_stts.media_size
      -%}

      {%- capture class_media -%}
        has-media-banner dis-grid a-i-{{ sec_stts.align_items }}
        {%- if is_widget %} has-media-banner-widget{%- endif -%}
        {%- if sec_stts.position == 'right' %} has-media-banner-right{%- endif %}
        {%- if widget_layout == 'spotlight' %} widget-layout--spotlight{%- endif -%}
      {%- endcapture -%}

      {%- capture style_media -%}
        --gap-a: {{ sec_stts.columns_gap }}px;

        {%- if widget_layout != 'spotlight' %}
          {%- if sec_stts.position == 'left' -%}
            {%- if media_size == 'small' %} --columns-vertical-int: 1fr 2fr; 
            {%- elsif media_size == 'medium' %} --columns-vertical-int: 1fr 1fr; 
            {%- elsif media_size == 'large' %} --columns-vertical-int: 2fr 1fr; 
            {%- endif -%}
          {%- else %}
            {%- if media_size == 'small' %} --columns-vertical-int: 2fr 1fr; 
            {%- elsif media_size == 'medium' %} --columns-vertical-int: 1fr 1fr; 
            {%- elsif media_size == 'large' %} --columns-vertical-int: 1fr 2fr; 
            {%- endif -%}
          {%- endif -%}
        {%- elsif is_widget and widget_layout == 'spotlight' %}
          --columns-vertical-int: 500px 100px 1fr;
        {%- endif -%}

        {%- if widget_layout == 'spotlight' %} 
          --grid-template-areas: 'content banner banner';
        {%- elsif sec_stts.position == 'right' %} 
          --grid-template-areas: 'content banner';
        {%- endif  -%}
      {%- endcapture -%}

      <div
        class="section-global__content{% if has_media_banner %} {{ class_media }} {% endif %}"
        style="{% if has_media_banner %} {{ style_media }} {% endif %}"
      >
        {%- if pos_media_banner == 'left' and section_has_settings_media -%}
          {%- if has_video == false -%}
            {{ banner_image_html }}
          {%- else -%}
            {{ banner_video_html }}
          {%- endif -%}
        {%- endif -%}

      {% case sec_stts.layout_type %}
        {% when 'grid' %}
          <div class="collection--grid-layout">
            {%- if show_mobile_slider -%}
              <swiper-component
                class="swiper-component-mobile"
                data-swiper-mobile
                data-loop="false"
                data-slides-per-view="{{ sec_stts.columns_mobile }}"
                data-space-between="{{ sec_stts.columns_gap }}"
              >
              <div class="swiper">
            {%- endif -%}

            <ul
              id="Grid-{{ sec_id }}"
              data-id="{{ sec_id }}"
              class="grid product-grid pad-0 mar-0{% if show_mobile_slider %} swiper-wrapper{% endif %} contains-card contains-card--product{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} grid--{{ sec_stts.columns_desktop }}-col-desktop grid--{{ columns_tablet }}-col-tablet-down grid--{{ sec_stts.columns_mobile }}-col-mobile"
              role="list"
              data-products-to-show="{{ max_tiems }}"
              aria-label="{{ 'general.grid.name' | t }}"
              style="--grid-desktop-horizontal-spacing: {{ sec_stts.columns_gap }}px; --grid-desktop-vertical-spacing: {{ sec_stts.rows_gap }}px;"
            >
              {{ list_items }}
            </ul>

            {%- if show_more_product -%}
              <template data-product-grid-template-showmore>
                {%- for product in collections[sec_stts.collection].products limit: collections[sec_stts.collection].all_products_count offset: max_tiems -%}
                  <li id="Slide-{{ sec_id }}-{{ product.id }}-{{ forloop.index }}" class="grid__item{% if show_mobile_slider or sec_stts.layout_type == 'carousel' or sec_stts.layout_type == 'widget' %} swiper-slide{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                    {% if settings.animations_reveal_on_scroll %} style="--animation-order: {{ forloop.index | plus: max_tiems }};"{% endif %}
                    >
                    {% content_for "block", type: "card-product-flex", id: "product-slide-item", closest.product: product %}
                  </li>
                {%- endfor -%}
              </template>
            {%- endif -%}

            {%- if show_mobile_slider -%}
              </div>
              </swiper-component>
            {%- endif -%}

            {%- if show_more_product -%}
              <show-more-product-grid class="product-infinite-scroll dis-block center">
                  <button type="button" class="button"><span>{{ sec_stts.show_more_product_text }}</span></button>
              </show-more-product-grid>
            {%- endif -%}
          </div>

        {% when 'carousel', 'widget' %}
          <swiper-component
            class="collection-coursel-swiper-component{% if has_media_banner %} overflow-hidden{% endif %}{% if sec_stts.full_width and sec_stts.page_width == 'page-width' %} full-width{% endif %}{% if widget_layout == 'spotlight' %} pos-relative z-index-2 dis-flex f-column j-c-end{% endif %}"
            data-loop="{{ sec_stts.loop  }}"
            data-slides-per-view="{% if is_widget %}1{% else %}{{ sec_stts.columns_mobile }}{% endif %}"
            data-space-between="{{ sec_stts.columns_gap }}"
            {% if sec_stts.pagination_type == 'dynamic' %}
              data-pagination-type="bullets"
              data-dynamic-bullets="true"
            {% else %}
              data-pagination-type="{{ sec_stts.pagination_type }}"
            {% endif %}
            data-breakpoints='
              {
                "768": { "slidesPerView": {% if is_widget %}1{% else %}{{ columns_tablet }}{% endif %} },
                "1024": { "slidesPerView": {% if is_widget %}{{ sec_stts.columns_desktop_widget }}{% else %}{{ columns_tablet }}{% endif %} },
                "1400": { "slidesPerView": {% if is_widget %}{{ sec_stts.columns_desktop_widget }}{% else %}{{ sec_stts.columns_desktop }}{% endif %} }
              }
            '
          >
            <div class="swiper wid-100">
              <ul
                id="Slider-{{ sec_id }}"
                data-id="{{ sec_id }}"
                class="swiper-wrapper pad-0 mar-0 dis-flex contains-card contains-card--product{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} grid--{{ sec_stts.columns_desktop }}-col-desktop grid--{{ columns_tablet }}-col-tablet-down grid--{{ sec_stts.columns_mobile }}-col-mobile"
              >
                {{ list_items }}
              </ul>

              {%- if enable_navigation -%}
                <div class="swiper-btns-wrap small-hide">
                  <div class="swiper-button swiper-button-prev">
                    <span class="svg-wrapper">
                      {{- 'icon-caret.svg' | inline_asset_content -}}
                    </span>
                  </div>
                  <div class="swiper-button swiper-button-next">
                    <span class="svg-wrapper">
                      {{- 'icon-caret.svg' | inline_asset_content -}}
                    </span>
                  </div>
                </div>
              {%- endif -%}
              {%- if enable_pagination -%}
                <div class="swiper-pagination"></div>
              {%- endif -%}
            </div>
          </swiper-component>
        {% when 'editorial' %}
          {% render 'editorial-product-grid', items: list_items_array %}
        {% when 'tabs-grid' %}
          {{ 'tabs-component.css' | asset_url | stylesheet_tag }}

          {%- liquid
            assign class_tabs_product_header_item = 'tabs-product-header__item tabs-component-panel-trigger full-unstyled-link f-shrink-0'
            assign class_tabs_product_grid = 'tabs-product-grid tabs-component-content'
          -%}

          {%- capture attr_tabs_header -%}
            class="tabs-product-header dis-flex j-c-center-xlarge over-x-a" style="--c-gap-a: 1rem;"
          {%- endcapture -%}

          {%- capture attr_ul -%}
            id="Grid-tabs-{{ sec_id }}"
            data-id="{{ sec_id }}"
            role="list"
            aria-label="{{ 'general.grid.name' | t }}"
            style="--grid-desktop-horizontal-spacing: {{ sec_stts.columns_gap }}px; --grid-desktop-vertical-spacing: {{ sec_stts.rows_gap }}px;"
          {%- endcapture -%}

          <tabs-component class="{% if has_media_banner %}dis-block overflow-hidden{% endif %}">
            {%- if section_collections_list != blank -%}
              <div {{ attr_tabs_header }}>
                {% for collection in section_collections_list %}
                  <a
                    href="#tabs-{{ sec_id }}-{{ forloop.index }}"
                    class="{{ class_tabs_product_header_item }}{% if forloop.first %} --active{% endif %}"
                  >
                    {{ collection.title | escape | default: 'Collection title' }}
                  </a>
                {% endfor %}
              </div>
              {% for collection in section_collections_list %}
                {%- liquid
                  assign section_collections = collection.products

                  assign products_to_display = collection.all_products_count

                  assign show_mobile_slider = false
                  if sec_stts.swipe_on_mobile and products_to_display > columns_mobile_int
                    assign show_mobile_slider = true
                  endif

                  assign more_in_collection = false
                  if collection.all_products_count > max_tiems
                    assign more_in_collection = true
                  endif
                -%}

                <div
                  id="tabs-{{ sec_id }}-{{ forloop.index }}"
                  class="{{ class_tabs_product_grid }}{% if forloop.first %} --active{% endif %}"
                >
                  <template>
                    {%- if show_mobile_slider -%}
                      <swiper-component
                        class="swiper-component-mobile"
                        data-swiper-mobile
                        data-loop="false"
                        data-slides-per-view="{{ sec_stts.columns_mobile }}"
                        data-space-between="{{ sec_stts.columns_gap }}"
                      >
                        <div class="swiper">
                    {%- endif -%}
                    <ul
                      {{ attr_ul }}
                      class="grid product-grid pad-0 mar-0{% if show_mobile_slider %} swiper-wrapper{% endif %} contains-card contains-card--product{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} grid--{{ sec_stts.columns_desktop }}-col-desktop grid--{{ columns_tablet }}-col-tablet-down grid--{{ sec_stts.columns_mobile }}-col-mobile"
                    >
                      {% for product in section_collections limit: max_tiems %}
                        <li
                          id="Grid-item-{{ product.id }}-{{ forloop.index }}"
                          class="grid__item{% if show_mobile_slider or sec_stts.layout_type == 'carousel' %} swiper-slide{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                          {% if settings.animations_reveal_on_scroll %}
                            style="--animation-order: {{ forloop.index }};"
                          {% endif %}
                        >
                          {% content_for 'block',
                            type: 'card-product-flex',
                            id: 'product-slide-item',
                            closest.product: product
                          %}
                        </li>
                      {% endfor %}
                    </ul>
                    {%- if show_mobile_slider -%}
                      </div>
                      </swiper-component>
                    {%- endif -%}
                    {%- if sec_stts.show_view_all and more_in_collection -%}
                      <div class="center collection__view-all{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
                        <a

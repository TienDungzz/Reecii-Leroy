{%- stylesheet -%}
  .tabs-product-header__item {
    &.--active {
      color: var(--color-active);
      background: var(--bg-color-active);
    }
  }
  @media screen and (width <= 750px) {
    .swiper-component-mobile .swiper-wrapper {
      flex-wrap: nowrap;
      gap: 0px;
    }

    .swiper-component-mobile .grid__item.swiper-slide {
      max-width: 100%;
    }
  }
  .collection-coursel-swiper-component.full-width .swiper {
    overflow: visible;
  }

  .collection-coursel-swiper-component.full-width .swiper-btns-wrap {
    position: absolute;
    width: 100%;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    z-index: 1;
  }

  .product-infinite-scroll {
    margin-top: 5.5rem;
  }

  .section--featured-collection .content-inside-media {
    padding: 3rem 1rem;

    .content-inside-media__inner {
      max-width: 500px;
    }
  }

  .collection-banner .video-wrapper {
    .content-inside-media,
    .deferred-media__poster {
      pointer-events: none;
    }

    .content-inside-media__inner {
      pointer-events: visible;
    }

    .deferred-media__poster-icon {
      pointer-events: visible;
      cursor: pointer;
    }

    &:has(.deferred-media[loaded='true']) {
      .video-wrapper__caption {
        display: none;
      }
    }
  }

  .collection-banner .video-poster-button {
    width: 6.4rem;
    height: 6.4rem;

    .button {
      height: 100%;
      min-width: 100%;
    }
  }

  @media screen and (width >= 750px) {
    .section--featured-collection .has-media-banner {
      grid-template-columns: var(--columns-vertical-int, 1fr 2fr);
      grid-template-areas: var(--grid-template-areas, 'banner content');

      .collection-banner {
        grid-area: banner;
      }
    }

    .section--featured-collection .has-media-banner-right.widget-layout--spotlight {
      > * {
        grid-row: 1;
      }

      .collection-coursel-swiper-component {
        grid-column: 1 / 3;
      }

      .deferred-media {
        grid-column: 2 / 4;
      }
    }
  }
{%- endstylesheet -%}

<div
  class="section section--{{ page_width }} color-{{ sec_stts.color_scheme }} gradient relative z-0 spacing"
  style=" --p-spacing-t: {{ sec_stts.padding_top }}px;--p-spacing-b: {{ sec_stts.padding_bottom }}px;"
>
  <div>
    {%- liquid
      assign heading_type_preset = sec_stts.heading_type_preset
      assign heading_font = sec_stts.heading_font
      assign heading_font_size = sec_stts.heading_font_size
      assign heading_case = sec_stts.heading_case
      assign heading_margin_bottom = sec_stts.heading_margin_bottom

      if heading_font_size contains 'heading-lg' or heading_font_size contains 'heading-xl'
        assign heading_type = 'display'
      elsif heading_font_size contains 'heading'
        assign heading_type = 'heading'
      else
        assign heading_type = 'body'
      endif
      if heading_type_preset == 'rte' or heading_type_preset == 'paragraph'
        assign is_heading_rte = true
      endif

      assign subheading_type_preset = sec_stts.subheading_type_preset
      assign subheading_font = sec_stts.subheading_font
      assign subheading_font_size = sec_stts.subheading_font_size
      assign subheading_case = sec_stts.subheading_case
      assign subheading_margin_bottom = sec_stts.subheading_margin_bottom

      if subheading_font_size contains 'heading-lg' or subheading_font_size contains 'heading-xl'
        assign subheading_type = 'display'
      elsif subheading_font_size contains 'heading'
        assign subheading_type = 'heading'
      else
        assign subheading_type = 'body'
      endif
      if subheading_type_preset == 'rte' or subheading_type_preset == 'paragraph'
        assign is_subheading_rte = true
      endif

      assign text_type_preset = sec_stts.text_type_preset
      assign text_font = sec_stts.text_font
      assign text_font_size = sec_stts.text_font_size
      assign text_case = sec_stts.text_case
      assign text_margin_bottom = sec_stts.text_margin_bottom

      if text_font_size contains 'heading-lg' or text_font_size contains 'heading-xl'
        assign text_type = 'display'
      elsif text_font_size contains 'heading'
        assign text_type = 'heading'
      else
        assign text_type = 'body'
      endif
      if text_type_preset == 'rte' or text_type_preset == 'paragraph'
        assign is_text_rte = true
      endif

      assign content_media_position = sec_stts.content_media_position
      assign content_media_alignment = sec_stts.content_media_alignment

      assign columns_gap = sec_stts.columns_gap
      assign rows_gap = sec_stts.rows_gap

      assign pagination_type = sec_stts.pagination_type

      assign show_view_all = sec_stts.show_view_all
      assign view_all_style = sec_stts.view_all_style
    -%}

    {%- capture heading_block_classes -%}
        {%- if heading_type_preset == 'custom' -%} custom-typography
          {%- if heading_font_size != 'default' %} {{ heading_type }}-{{ heading_font_size }}-font-size {% endif -%}
          {% if is_heading_rte -%} rte {% endif -%}
        {% endif %}
      {%- endcapture -%}

    {%- capture subheading_block_classes -%}
        {%- if subheading_type_preset == 'custom' -%} custom-typography
          {%- if subheading_font_size != 'default' %} {{ subheading_type }}-{{ subheading_font_size }}-font-size {% endif -%}
          {% if is_subheading_rte -%} rte {% endif -%}
        {% endif %}
      {%- endcapture -%}

    {%- capture text_block_classes -%}
        {%- if text_type_preset == 'custom' -%} custom-typography
          {%- if text_font_size != 'default' %} {{ text_type }}-{{ text_font_size }}-font-size {% endif -%}
          {% if is_text_rte -%} rte {% endif -%}
        {% endif %}
      {%- endcapture -%}

    {% capture attributes %}
        class=" spacing-style {{ heading_type_preset }} {{ heading_block_classes }} content-inside-media__heading"
        style="--margin-block-end: {{ heading_margin_bottom | divided_by: 10.0 }}rem;{% render 'typography-style', preset: heading_type_preset, font: heading_font, font_size: heading_font_size, case: heading_case %}"
      {% endcapture %}

    {% capture attributes_subheading %}
        class=" spacing-style {{ subheading_type_preset }} {{ subheading_block_classes }} content-inside-media__subheading"
        style="--margin-block-end: {{ subheading_margin_bottom | divided_by: 10.0 }}rem;{% render 'typography-style', preset: subheading_type_preset, font: subheading_font, font_size: subheading_font_size, case: subheading_case %}"
      {% endcapture %}

    {% capture attributes_text %}
        class=" spacing-style {{ text_type_preset }} {{ text_block_classes }} content-inside-media__text"
        style="--margin-block-end: {{ text_margin_bottom | divided_by: 10.0 }}rem;{% render 'typography-style', preset: text_type_preset, font: text_font, font_size: text_font_size, case: text_case %}"
      {% endcapture %}

    {%- capture content_insde_media -%}
      {%- liquid
        assign content_heading = sec_stts.content_heading
        assign content_subheading = sec_stts.content_subheading
        assign content_text = sec_stts.content_text
        assign content_button_label = sec_stts.content_button_label
        assign content_button_link = sec_stts.content_button_link
        assign content_button_style = sec_stts.content_button_style
      -%}
      {% if content_heading != blank or content_subheading != blank or content_text != blank %}
        <div class="content-inside-media absolute-c-c w-full h-full flex items-{{content_media_position | replace: 'top', 'start' | replace: 'bottom', 'end'}} justify-{{ content_media_alignment | replace: 'left', 'start' | replace: 'right', 'end' }} {{ content_media_alignment }}">
          <div class="content-inside-media__inner">
            {% if content_heading != blank %}
              <h3 {{ attributes }}>{{ content_heading }}</h3>
            {% endif %}
            {% if content_subheading != blank %}
              <h4 {{ attributes_subheading }}>{{ content_subheading }}</h4>
            {% endif %}
            {% if content_text != blank %}
              <div {{ attributes_text }}>{{ content_text }}</div>
            {% endif %}
            {% if content_button_label != blank %}
              {% render 'button', link: content_button_link, style_class: content_button_style, label: content_button_label %}
            {% endif %}
          </div>
        </div>
      {% endif %}
    {%- endcapture -%}

    {%- capture banner_image_html -%}
      {%- liquid
        assign banner_image = sec_stts.banner_image
      -%}
      {% if banner_image != blank %}
        {%- liquid
          assign ratio = sec_stts.media_ratio
          assign image_height = banner_image.width | divided_by: banner_image.aspect_ratio
        -%}
        <figure class="collection-banner m-0 media media-block media--{{ ratio }}" style="--media-image-fit: {{ sec_stts.image_position }};{% if ratio == 'adapt' %}--media-adapt-ratio: {{ banner_image.aspect_ratio }};{% endif %}">
          {%- render 'image',
            image: banner_image,
            class: 'collection-banner__image media-block__image',
            height: image_height,
          -%}
          <figcaption class="collection-banner__caption">
            {{ content_insde_media }}
          </figcaption>
        </figure>
      {% elsif banner_image == blank and layout_type == 'widget' %}
          {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
      {% endif %}
    {%- endcapture -%}

    {%- capture banner_video_html -%}
      {%- liquid
        assign ratio = sec_stts.media_ratio
        assign banner_image = sec_stts.banner_image
      -%}

      {{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}
      {% capture video_style %}
        --size-style-width: 100%; --size-style-width-mobile: 100%;
        --media-image-fit: {{ sec_stts.image_position }};
        {% if ratio == 'adapt' %}
          --media-adapt-ratio: {% if banner_image == blank %}16/9{% else %}{{ banner_image.aspect_ratio }}{% endif %};
        {% endif %}
      {% endcapture %}
      <div class="collection-banner">

        {%- if sec_stts.video_display_mode == 'inline' -%}
          <figure class="video-wrapper m-0 relative">
            <div class="video-inner">
              {% if section.settings.source == 'uploaded' %}
                {% render 'video',
                  video: sec_stts.video,
                  video_class: 'spacing-style size-style border-style',
                  video_loop: sec_stts.video_loop,
                  video_autoplay: sec_stts.video_autoplay,
                  video_style: video_style,
                  video_ratio: ratio,
                  video_preview_image: banner_image,
                  additional_attributes: section.shopify_attributes,
                  section_id: sec_id,
                  section: section
                %}
              {% else %}
                {% render 'video',
                  video_from_url: true,
                  video: sec_stts.video_url.id,
                  video_class: 'spacing-style size-style border-style',
                  video_type: sec_stts.video_url.type,
                  video_autoplay: sec_stts.video_autoplay,
                  video_style: video_style,
                  video_ratio: ratio,
                  video_alt: sec_stts.alt,
                  video_preview_image: banner_image,
                  additional_attributes: section.shopify_attributes,
                  section_id: sec_id,
                  section: section
                %}
              {% endif %}
            </div>
            <figcaption class="video-wrapper__caption">
              {{ content_insde_media }}
            </figcaption>
          </figure>
        {%- else -%}
          <div class="video-poster relative">
            <modal-opener data-modal="#VideoModal-{{ sec_id }}" class="video-poster-button absolute-c-c z-1">
              <button
                id="video-poster-button-{{ sec_id }}"
                type="button"
                class="button button-unstyled"
                aria-haspopup="dialog"
              >
                <span class="video-poster-button__icon deferred-media__poster-icon">
                  <span class="visually-hidden">{{ 'products.product.media.play_video' | t }}</span>
                  {{- 'icon-play.svg' | inline_asset_content -}}
                </span>
              </button>
            </modal-opener>
            {{banner_image_html }}
          </div>
        {%- endif -%}

      </div>
    {%- endcapture -%}

    <div
      class="collection{% if sec_stts.quick_add == 'bulk' %} collection-quick-add-bulk{% endif %}{% if sec_stts.full_width %} collection--full-width{% endif %}"
      id="collection-{{ sec_id }}"
      data-id="{{ sec_id }}"
      data-product-block
    >
      <div class="section-global__header">
        {%- content_for 'block', type: '_section-header', id: 'section-header' -%}
      </div>

      {% capture list_items %}
        {% for product in section_collections limit: max_tiems %}
          <li id="Slide-{{ sec_id }}-{{ product.id }}-{{ forloop.index }}" class="grid__item{% if show_mobile_slider or layout_type == 'carousel' or layout_type == 'widget' %} swiper-slide{% endif %}{% if scroll_reveal %} scroll-trigger animate--slide-in{% endif %}"
          {% if scroll_reveal %} style="--animation-order: {{ forloop.index }};"{% endif %}
          >
            {% content_for "block", type: "card-product-flex", id: "product-slide-item", closest.product: product %}
          </li>

          {% unless forloop.last %}
            <!--@list/split-->
          {% endunless %}

        {% endfor %}
      {% endcapture %}

      {%- liquid
        assign list_items_array = list_items | strip | split: '<!--@list/split-->'

        assign media_size = sec_stts.media_size
      -%}

      {%- capture class_media -%}
        has-media-banner grid grid-layout items-{{ sec_stts.align_items }}
        {%- if is_widget %} has-media-banner-widget{%- endif -%}
        {%- if sec_stts.position == 'right' %} has-media-banner-right{%- endif %}
        {%- if widget_layout == 'spotlight' %} widget-layout--spotlight{%- endif -%}
      {%- endcapture -%}

      {%- capture style_media -%}
        --gap: {{ columns_gap }}px;

        {%- if widget_layout != 'spotlight' %}
          {%- if sec_stts.position == 'left' -%}
            {%- if media_size == 'small' %} --columns-vertical-int: 1fr 2fr;
            {%- elsif media_size == 'medium' %} --columns-vertical-int: 1fr 1fr;
            {%- elsif media_size == 'large' %} --columns-vertical-int: 2fr 1fr;
            {%- endif -%}
          {%- else %}
            {%- if media_size == 'small' %} --columns-vertical-int: 2fr 1fr;
            {%- elsif media_size == 'medium' %} --columns-vertical-int: 1fr 1fr;
            {%- elsif media_size == 'large' %} --columns-vertical-int: 1fr 2fr;
            {%- endif -%}
          {%- endif -%}
        {%- elsif is_widget and widget_layout == 'spotlight' %}
          --columns-vertical-int: 500px 100px 1fr;
        {%- endif -%}

        {%- if widget_layout == 'spotlight' %}
          --grid-template-areas: 'content banner banner';
        {%- elsif sec_stts.position == 'right' %}
          --grid-template-areas: 'content banner';
        {%- endif  -%}
      {%- endcapture -%}

      <div
        class="section-global__content{% if has_media_banner %} {{ class_media }} {% endif %}"
        style="{% if has_media_banner %} {{ style_media }} {% endif %}"
      >
        {%- if pos_media_banner == 'left' and section_has_settings_media -%}
          {%- if has_video == false -%}
            {{ banner_image_html }}
          {%- else -%}
            {{ banner_video_html }}
          {%- endif -%}
        {%- endif -%}

        {% case layout_type %}
          {% when 'grid' %}
            <div class="collection--grid-layout">
              {%- if show_mobile_slider -%}
                <swiper-component
                  class="swiper-component-mobile"
                  data-swiper-mobile
                  {%- render 'swiper-data', settings: section.settings, loop: false, slides_per_view: columns_mobile, space_between: columns_gap -%}
                >
                  <div class="swiper">
              {%- endif -%}

              <ul
                id="Grid-{{ sec_id }}"
                data-id="{{ sec_id }}"
                class="grid grid-layout product-grid list-unstyled{% if show_mobile_slider %} swiper-wrapper md:grid{% endif %} contains-card contains-card--product{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} lg:grid-layout--{{ columns_desktop }} md:grid-layout--{{ columns_tablet }} sm:grid-layout--{{ columns_mobile }}"
                role="list"
                data-products-to-show="{{ max_tiems }}"
                aria-label="{{ 'general.grid.name' | t }}"
                style="--grid-desktop-horizontal-spacing: {{ columns_gap }}px; --grid-desktop-vertical-spacing: {{ rows_gap }}px;"
              >
                {{ list_items }}
              </ul>

              {%- if show_more_product -%}
                <template data-product-grid-template-showmore>
                  {%- for product in collections[sec_stts.collection].products
                    limit: collections[sec_stts.collection].all_products_count
                    offset: max_tiems
                  -%}
                    <li
                      id="Slide-{{ sec_id }}-{{ product.id }}-{{ forloop.index }}"
                      class="grid__item{% if show_mobile_slider or layout_type == 'carousel' or layout_type == 'widget' %} swiper-slide{% endif %}{% if scroll_reveal %} scroll-trigger animate--slide-in{% endif %}"
                      {% if scroll_reveal %}
                        style="--animation-order: {{ forloop.index | plus: max_tiems }};"
                      {% endif %}
                    >
                      {% content_for 'block',
                        type: 'card-product-flex',
                        id: 'product-slide-item',
                        closest.product: product
                      %}
                    </li>
                  {%- endfor -%}
                </template>
              {%- endif -%}

              {%- if show_mobile_slider -%}
                </div>
                </swiper-component>
              {%- endif -%}

              {%- if show_more_product -%}
                <show-more-product-grid class="product-infinite-scroll block center">
                  <button type="button" class="button m-x-auto">
                    <span>{{ sec_stts.show_more_product_text }}</span>
                  </button>
                </show-more-product-grid>
              {%- endif -%}
            </div>

          {% when 'carousel', 'widget' %}
            {%- if is_widget -%}
              {%- assign slides_per_view = 1 -%}
            {%- else -%}
              {%- assign slides_per_view = columns_mobile -%}
            {%- endif -%}
            {%- capture breakpoints -%}
              {
                "768": { "slidesPerView": {% if is_widget %}1{% else %}{{ columns_tablet }}{% endif %} },
                "1024": { "slidesPerView": {% if is_widget %}{{ sec_stts.columns_desktop_widget }}{% else %}{{ columns_tablet }}{% endif %} },
                "1400": { "slidesPerView": {% if is_widget %}{{ sec_stts.columns_desktop_widget }}{% else %}{{ columns_desktop }}{% endif %} }
              }
            {%- endcapture -%}
            <swiper-component
              class="collection-coursel-swiper-component{% if has_media_banner %} overflow-hidden{% endif %}{% if sec_stts.full_width and page_width == 'page-width' %} full-width{% endif %}{% if widget_layout == 'spotlight' %} relative z-2 flex flex-column justify-end{% endif %}"
              {%- render 'swiper-data',
                settings: section.settings,
                slides_per_view: slides_per_view,
                space_between: columns_gap,
                watch_slides_progress: true,
                breakpoints: breakpoints
              -%}
            >
              <div class="swiper w-full">
                <ul
                  id="Slider-{{ sec_id }}"
                  data-id="{{ sec_id }}"
                  class="swiper-wrapper grid-layout-no-js list-unstyled contains-card contains-card--product{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} lg:grid-layout--{{ columns_desktop }} md:grid-layout--3 grid--{{ columns_mobile }}-col-mobile"
                >
                  {{ list_items }}
                </ul>

                {%- if enable_navigation -%}
                  <div class="swiper-btns-wrap small-hide">
                    {%- render 'swiper-button' -%}
                  </div>
                {%- endif -%}
                {%- if enable_pagination -%}
                  <div class="swiper-pagination"></div>
                {%- endif -%}
              </div>
            </swiper-component>
          {% when 'editorial' %}
            {% render 'editorial-product-grid', items: list_items_array %}
          {% when 'tabs-grid' %}
            {{ 'tabs-component.css' | asset_url | stylesheet_tag }}


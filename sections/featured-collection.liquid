{%- capture style_tabs_header_item -%}
  --p: {{ sec_stts.tabs_header_padding_block_items }}px {{ sec_stts.tabs_header_padding_inline_items }}px;
  --border-radius: {{ sec_stts.tabs_header_corner_radius }}px;
  --border-width: {{ sec_stts.tabs_header_border_thickness }}px;

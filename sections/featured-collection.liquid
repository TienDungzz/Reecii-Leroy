{{ 'template-collection.css' | asset_url | stylesheet_tag }}

{% if section.settings.image_shape == 'blob' %}
  {{ 'mask-blobs.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{% comment %}
  {%- if section.settings.quick_add != 'none' -%}
    {{ 'quick-add.css' | asset_url | stylesheet_tag }}
  {%- endif -%}
{% endcomment %}

{%- liquid
  assign sec_id = section.id
  assign sec_stts = section.settings

  assign products_to_display = sec_stts.collection.all_products_count

  assign max_tiems = sec_stts.products_to_show

  if sec_stts.collection.all_products_count > max_tiems
    assign products_to_display = max_tiems
    assign more_in_collection = true
  endif

  assign columns_mobile = sec_stts.columns_mobile
  assign columns_mobile_int = columns_mobile | plus: 0
  assign show_mobile_slider = false
  if sec_stts.swipe_on_mobile and products_to_display > columns_mobile_int
    assign show_mobile_slider = true
  endif

  assign columns_desktop = sec_stts.columns_desktop
  assign columns_tablet = 2
  if columns_desktop == 1
    assign columns_tablet = 1
  elsif columns_desktop >= 4
    assign columns_tablet = 3
  endif

  assign section_collections = sec_stts.collection.products | default: (1..max_tiems)
  assign section_collections_list = sec_stts.collection_list

  assign enable_navigation = false
  if sec_stts.navigation == 'arrows-pagination' or sec_stts.navigation == 'arrows'
    assign enable_navigation = true
  endif

  assign enable_pagination = false
  if sec_stts.navigation == 'pagination' or sec_stts.navigation == 'arrows-pagination'
    assign enable_pagination = true
  endif

  assign layout_type = sec_stts.layout_type

  assign has_media_banner = false
  if sec_stts.banner_image != blank or sec_stts.video != blank or sec_stts.video_url != blank
    assign has_media_banner = true
  elsif sec_stts.banner_image == blank and layout_type == 'widget'
    assign has_media_banner = true
  endif

  assign is_widget = false
  if layout_type == 'widget'
    assign is_widget = true
  endif

  assign widget_layout = sec_stts.widget_layout

  assign section_has_settings_media = false
  if layout_type == 'grid' or layout_type == 'tabs-grid' or layout_type == 'tabs-carousel' or layout_type == 'widget' or layout_type == 'carousel'
    assign section_has_settings_media = true
  endif

  assign has_video = false
  if sec_stts.video != blank or sec_stts.video_url != blank
    assign has_video = true
  endif

  assign pos_media_banner = sec_stts.position
  if widget_layout == 'spotlight'
    assign pos_media_banner = 'right'
  endif

  assign show_more_product = false
  if sec_stts.show_more_product and collections[sec_stts.collection].all_products_count > max_tiems
    assign show_more_product = true
  endif

  assign page_width = sec_stts.page_width

  assign scroll_reveal = settings.animations_reveal_on_scroll
-%}

{% comment %} For layout type tabs-grid and tabs-carousel {% endcomment %}
{%- liquid
  assign class_tabs_product_header_item = 'border-style tabs-product-header__item tabs-component-panel-trigger full-unstyled-link shrink-0'
  assign class_tabs_product_grid = 'tabs-product-grid tabs-component-content'
-%}

{%- capture attr_tabs_header -%}
  class="tabs-product-header flex xl:justify-{{ sec_stts.tabs_header_alignment | replace: 'left', 'start' | replace: 'right', 'end' }} overflow-x-a"
  style="--gap-x: {{ sec_stts.tabs_header_gap }}px; --pt: {{ sec_stts.tabs_header_padding_top | times: 0.1 }}rem; --pb: {{ sec_stts.tabs_header_padding_bottom | times: 0.1 }}rem;
  --bg-color-active: {{ sec_stts.tabs_header_background_active }};
  --color-active: {{ sec_stts.tabs_header_color_active }};
  "

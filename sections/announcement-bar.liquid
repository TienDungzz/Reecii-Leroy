<announcement-bar
  class="
    group-block block page-width
    group-block--{{ section.id }}
    color-{{ section.settings.color_scheme }}
  "
  style="
    --pt:{{ section.settings.padding_top }}px;
    --pb:{{ section.settings.padding_bottom }}px;
  "
>
  {% content_for 'blocks' %}
</announcement-bar>

{% schema %}
{
  "name": "t:names.announcement_bar",
  "class": "section-header",
  "limit": 1,
  "enabled_on": {
    "groups": ["header"]
  },
  "blocks": [{ "type": "@app" }, { "type": "_group-announcement-bar" }, { "type": "_group-sale-banner" }],
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:settings.color_scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:content.spacing"
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:settings.spacing_bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "t:content.section_padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 36,
      "step": 1,
      "unit": "px",
      "label": "t:settings.top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 36,
      "step": 1,
      "unit": "px",
      "label": "t:settings.bottom",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "t:names.announcement_bar",
      "category": "t:categories.storytelling",
      "blocks": [
        {
          "type": "_group-announcement-bar",
          "blocks": [
            {
              "type": "_group-announcement",
              "settings": {
                "width_grid_item": 33
              },
              "blocks": [
                {
                  "type": "_announcement-text",
                  "settings": {
                    "text": "Welcome to our store"
                  }
                },
                {
                  "type": "_announcement-text",
                  "settings": {
                    "text": "Welcome to our store"
                  }
                },
                {
                  "type": "_announcement-text",
                  "settings": {
                    "text": "Welcome to our store"
                  }
                }
              ]
            },
            {
              "type": "_group-social",
              "settings": {
                "width_grid_item": 33
              }
            },
            {
              "type": "_group-regional",
              "settings": {
                "width_grid_item": 33,
                "enable_country_selector": true,
                "enable_language_selector": true
              }
            }
          ]
        },
        {
          "type": "_group-sale-banner",
          "blocks": []
        }
      ]
    }
  ]
}
{% endschema %}

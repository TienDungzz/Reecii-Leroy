{% comment %}theme-check-disable UndefinedObject{% endcomment %}
{{ 'section-footer.css' | asset_url | stylesheet_tag }}
{{ 'component-list-payment.css' | asset_url | stylesheet_tag }}

<div class="footer-bottom color-{{ section.settings.color_scheme }} spacing{% if section.settings.show_top_line_separator %} separator-top{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    style="
        --p-spacing-t: {{ section.settings.padding_top }}px;
        --p-spacing-b: {{ section.settings.padding_bottom }}px;
    "
>
    <div class="page-width footer__content-bottom-wrapper flex justify-center w-full">
        <div class="footer__column footer__localization relative z-0">
            {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
                <localization-form>
                    {%- form 'localization', id: 'FooterCountryForm', class: 'localization-form' -%}
                        <div>
                            <h2 class="caption-large text-body" id="FooterCountryLabel">{{ 'localization.country_label' | t }}</h2>
                            {%- render 'country-localization', localPosition: 'FooterCountry' -%}
                        </div>
                    {%- endform -%}
                </localization-form>
            {%- endif -%}

            {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
                <localization-form>
                    {%- form 'localization', id: 'FooterLanguageForm', class: 'localization-form' -%}
                        <div>
                            <h2 class="caption-large text-body" id="FooterLanguageLabel">{{ 'localization.language_label' | t }}</h2>
                            {%- render 'language-localization', localPosition: 'FooterLanguage' -%}
                        </div>
                    {%- endform -%}
                </localization-form>
            {%- endif -%}
        </div>
        <div class="footer__column footer__column--info">
            {%- if section.settings.payment_enable -%}
                <div class="footer__payment">
                    <span class="visually-hidden">{{ 'sections.footer.payment' | t }}</span>
                    <ul class="list list-payment" role="list">
                        {%- for type in shop.enabled_payment_types -%}
                            <li class="list-payment__item">
                                {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                            </li>
                        {%- endfor -%}
                    </ul>
                </div>
            {%- endif -%}
        </div>
    </div>
    {%- if section.settings.show_social -%}
        <div class="footer__social">
            {% render 'social-icons', class: 'footer__list-social' %}
        </div>
    {%- endif -%}
    {%- if section.settings.show_social or section.settings.show_copyright -%}
        <div class="page-width footer__content-bottom-wrapper flex justify-center w-full">
            {%- if section.settings.show_copyright -%}
                <div class="footer__copyright caption">
                    <small class="copyright__content">&copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: routes.root_url -}}</small>
                    <small class="copyright__content">{{ powered_by_link }}</small>
                    {%- if section.settings.show_policy -%}
                        <ul class="policies list-unstyled">
                            {%- for policy in shop.policies -%}
                                {%- if policy != blank -%}
                                    <li>
                                        <small class="copyright__content">
                                            <a href="{{ policy.url }}">{{ policy.title | escape }}</a>
                                        </small>
                                    </li>
                                {%- endif -%}
                            {%- endfor -%}
                        </ul>
                    {%- endif -%}
                </div>
            {%- endif -%}
        </div>
    {%- endif -%}
</div>

{% schema %}
{
    "name": "t:sections.footer-bottom.name",
    "settings": [
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "t:sections.all.colors.label",
            "default": "scheme-1"
        },
        {
            "type": "checkbox",
            "id": "show_top_line_separator",
            "default": true,
            "label": "t:sections.header.settings.show_line_separator.label"
        },
        {
            "type": "header",
            "content": "t:sections.footer-bottom.settings.header__1.content",
            "info": "t:sections.footer-bottom.settings.header__1.info"
        },
        {
            "type": "checkbox",
            "id": "enable_country_selector",
            "default": true,
            "label": "t:sections.footer-bottom.settings.enable_country_selector.label"
        },
        {
            "type": "header",
            "content": "t:sections.footer-bottom.settings.header__2.content",
            "info": "t:sections.footer-bottom.settings.header__2.info"
        },
        {
            "type": "checkbox",
            "id": "enable_language_selector",
            "default": true,
            "label": "t:sections.footer-bottom.settings.enable_language_selector.label"
        },
        {
            "type": "header",
            "content": "t:sections.footer-bottom.settings.header__3.content"
        },
        {
            "type": "checkbox",
            "id": "payment_enable",
            "default": true,
            "label": "t:sections.footer-bottom.settings.payment_enable.label"
        },
        {
            "type": "header",
            "content": "t:sections.footer-bottom.settings.header__4.content",
            "info": "t:sections.footer-bottom.settings.header__4.info"
        },
        {
            "type": "checkbox",
            "id": "show_social",
            "default": true,
            "label": "t:sections.footer-bottom.settings.show_social.label"
        },
        {
            "type": "header",
            "content": "t:sections.footer-bottom.settings.header__5.content"
        },
        {
            "type": "checkbox",
            "id": "show_copyright",
            "default": true,
            "label": "t:sections.footer-bottom.settings.show_copyright.label"
        },
        {
            "type": "header",
            "content": "t:sections.footer-bottom.settings.header__6.content",
            "info": "t:sections.footer-bottom.settings.header__6.info"
        },
        {
            "type": "checkbox",
            "id": "show_policy",
            "default": true,
            "label": "t:sections.footer-bottom.settings.show_policy.label"
        },
        {
            "type": "header",
            "content": "t:sections.all.padding.name"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 30
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 30
        }
    ]
}
{% endschema %}

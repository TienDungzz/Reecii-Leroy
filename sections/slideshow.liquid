{{ 'component-slideshow.css' | asset_url | stylesheet_tag }}
{{ 'slideshow-masonry.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign sec_stts = section.settings

  assign enable_navigation = false
  if sec_stts.navigation == 'arrows-pagination' or sec_stts.navigation == 'arrows'
    assign enable_navigation = true
  endif

  assign enable_pagination = false
  if sec_stts.navigation == 'pagination' or sec_stts.navigation == 'arrows-pagination'
    assign enable_pagination = true
  endif
  assign only_pagination = false
  if sec_stts.navigation == 'pagination'
    assign only_pagination = true
    assign pagination_position = sec_stts.pagination_position
  endif

  if sec_stts.show_left_categories
    assign show_left_categories = true
  endif

  if sec_stts.show_right_banner
    assign show_right_banner = true
  endif

  assign slideshow_type = sec_stts.slideshow_type
  assign is_layout_masonry = false
  if slideshow_type == 'masonry'
    assign is_layout_masonry = true
  endif
-%}

{%- capture masonry_class -%}
  slideshow--masonry grid-layout grid-layout--3
{%- endcapture -%}

{%- capture masonry_style -%}
  {%- for i in (1..4) -%}
    {%- assign row_index = 'm_row_' | append: i -%}
    {%- assign row_height = sec_stts[row_index] -%}
  --slideshow-masonry-row-{{ i }}-height: {{ row_height }}px;
  {%- endfor -%}
  --slideshow-masonry-gap: {{ sec_stts.masonry_gap }}px;
  --card-grid-gap: var(--slideshow-masonry-gap);
  --slideshow-masonry-column-left-width: {{ sec_stts.masonry_column_left }}%;
  --slideshow-masonry-column-right-width: {{ sec_stts.masonry_column_right }}%;
  --card-grid-template: var(--slideshow-masonry-column-left-width) var(--slideshow-masonry-column-right-width);
  --image-border-radius: {{ sec_stts.masonry_image_radisus }}px;
{%- endcapture -%}

{%- capture class_slideshow -%}
  slideshow slideshow--{{ section.settings.slide_height }} slideshow-mb--{{ section.settings.slide_height_mb }}
  {% if show_left_categories or show_right_banner and is_layout_masonry == false %} flex flex-wrap{% endif %}
  {% if show_left_categories and is_layout_masonry == false %} slideshow--has-categories{% endif %}
  {% if show_right_banner and is_layout_masonry == false %} slideshow--has-right-banner{% endif %}
  {% if is_layout_masonry %} {{ masonry_class }}{% endif %}
  {% if settings.enable_multi_level_category %} slideshow--multicate{% endif %}
  {% if sec_stts.stack_content_mobile %} slideshow--stack-mobile{% endif %}
{%- endcapture -%}

{%- capture style_slideshow -%}
  {% if section.settings.slide_height == 'custom' %}
    --hero-min-height: {{ section.settings.section_height_custom }}svh;
  {% elsif section.settings.slide_height == 'full-screen' %}
    --hero-min-height: 100svh;
  {% elsif section.settings.slide_height != 'adapt_image' %}
    --hero-min-height: var(--section-height-{{ section.settings.slide_height }});
  {% elsif section.settings.slide_height != 'height_first_slide' %}
    --hero-min-height: auto;
  {% endif %}

  {% if section.settings.slide_height_mb == 'custom' %}
    --hero-min-height-mb: {{ section.settings.section_height_custom_mb }}svh;
  {% elsif section.settings.slide_height_mb == 'full-screen' %}
    --hero-min-height-mb: 100svh;
  {% elsif section.settings.slide_height_mb != 'adapt_image' %}
    --hero-min-height-mb: var(--section-height-{{ section.settings.slide_height_mb }});
  {% elsif section.settings.slide_height_mb != 'height_first_slide' %}
    --hero-min-height-mb: auto;
  {% endif %}

  {%- if is_layout_masonry -%}
    {{ masonry_style }}
  {%- endif -%}
{%- endcapture -%}

<div
  class="section section--{{ section.settings.section_width }} color-{{ section.settings.color_scheme }} color-mobile-{{ section.settings.color_scheme_mobile }} spacing-style"
  style="
    {% if section.settings.section_width == 'custom' %}
      --page-content-width: {{ section.settings.page_width_custom | divided_by: 10 }}rem;
      --page-width: calc(var(--page-content-width) + var(--page-margin) * 2);
    {% endif %}

    {% render 'spacing-padding', settings: section.settings %}
  "
>
  <div
    id="slideshow-{{ section.id }}"
    class="{{ class_slideshow }}"
    style="{{ style_slideshow }}"
  >
    {% if show_left_categories and is_layout_masonry == false %}
      <div class="block-categories-slider max-md:w-full">
        <div class="wrapper-category">
          <div
            class="categories-slider--title"
            style="--fg-color: {{ sec_stts.left_categories_title_color }}; --background-color: {{ sec_stts.left_categories_title_background }};"
          >
            <span class="inline-block font-heading-weight">{{ sec_stts.left_categories_title }}</span>
          </div>
          <ul class="categories-slider--list disable-srollbar list-unstyled flex max-md:relative max-md:overflow-x-a lg:flex-wrap">
            {% assign menu = linklists[sec_stts.left_categories_menu].links %}
            {% for link in menu %}
              <li class="lg:w-1/2 m-0">
                <a
                  class="item-menu link link--text link--hover-underline h-full flex flex-wrap justify-center"
                  href="{{ link.url }}"
                >
                  {% assign img = link.handle | downcase | replace: ' ', '-' | append: '.png' | file_url %}
                  <span class="icon-img w-full block center">
                    <img
                      src="{{ img }}"
                      alt="{{ link.title }}"
                      onError="style.display = 'none';"
                      width="{{ img.width }}"
                      height="{{ img.height }}"
                      {%- if settings.enable_lazyload %}
                        loading="lazy"
                      {% endif -%}
                    >
                  </span>
                  <span class="text-menu w-full center">{{ link.title }}</span>
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    {% endif %}

    {% if is_layout_masonry %}
      {%- for i in (1..9) -%}
        {%- assign image_index = 'm_image_' | append: i -%}
        {%- assign image = section.settings[image_index] -%}
        {%- assign link_index = 'm_link_' | append: i -%}
        {%- assign link = section.settings[link_index] -%}
        <div class="slideshow--masonry-item slideshow--masonry-item--{{ i }}">
          <a
            href="{{ link }}"
            class="media decoration-none h-full{% if image != blank %} media--transparent{% else %} text-currentColor{% endif %}"
          >
            {%- if image != blank -%}
              {%- render 'image', image: image, sizes: '50vw' -%}
            {%- else -%}
              <span class="h3 flex-i flex-center text-currentColor text-stroke">Image {{ i }}</span>
            {%- endif -%}
          </a>
        </div>
      {%- endfor -%}
    {% endif %}

    {%- liquid
      assign pagination_type = sec_stts.pagination_type
      assign arrows_position = sec_stts.arrows_position
      assign dot_style = sec_stts.dot_style
      assign dot_appearance = sec_stts.dot_appearance
      assign dot_background = sec_stts.dot_background
      assign dot_border_radius = sec_stts.dot_border_radius
      assign swiper_buttons_gap = sec_stts.swiper_buttons_gap
    -%}
    <swiper-component
      class="slideshow__container"
      {%- render 'swiper-data',
        settings: section.settings,
        space_between: 0,
        parallax: true,
        speed: 800,
        direction: sec_stts.slide_direction
      -%}
    >
      <div class="swiper">
        <div class="swiper-wrapper slideshow__slides w-full">
          {% content_for 'blocks' %}
        </div>

        <div class="swiper-actions{% if enable_navigation %} swiper-actions--{{ arrows_position }}{% endif %} w-full">
          {%- capture pagi_class -%}
            swiper-pagination
            swiper-pagination--{{ dot_style }}
            {% if only_pagination %} swiper-pagination-pos--{{ pagination_position }}{% endif %}
            {% if pagination_type == 'fraction' %} body-2xl-font-size{% endif %}
          {%- endcapture -%}

          {% if dot_appearance %}
            {%- capture pagi_style -%}
              style="--bg-color: {{ dot_background }}; --corner-radius: {{ dot_border_radius }}px; --p: 0.4rem;"
            {%- endcapture -%}
          {% endif %}

          {%- capture pagi_html -%}
            <div class="{{ pagi_class }}" {{ pagi_style }}></div>
          {%- endcapture -%}

          {%- capture buttons_styles -%}
            {%- assign min = 10 -%}
            {%- assign gap = swiper_buttons_gap -%}
            {%- assign gap_vw = gap | times: 0.1 -%}
            {%- if gap > min -%}
              style="--button-gap: clamp({{ min }}px, {{ gap_vw }}vw, {{ gap }}px);"
            {%- else -%}
              style="--button-gap: {{ gap }}px;"
            {%- endif -%}
          {%- endcapture -%}

          <div
            class="swiper-btns-wrap{% if enable_navigation %} {{ arrows_position }}{% if arrows_position == 'bottom_right' %} page-width{% endif %}{% endif %}"
            {{ buttons_styles }}
          >
            {% if enable_navigation %}
              {%- render 'swiper-button' -%}
            {% endif %}

            {% if enable_pagination %}
              {{ pagi_html }}
            {% endif %}
          </div>
        </div>
      </div>
    </swiper-component>

    {%- if settings.enable_multi_level_category -%}
      <div class="home-category-filter-sections{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--fade-in{% endif %}">
        {% render 'multi-level-category' %}
      </div>
    {%- endif -%}

    {% if show_right_banner and is_layout_masonry == false %}
      <div class="right-banner">
        <div class="right-banner__grid grid-layout grid-layout--2">
          {% for i in (1..4) %}
            {% assign image = 'right_banner_image_' | append: i %}
            {% assign link = 'right_banner_link_' | append: i %}
            {% assign image = section.settings[image] %}
            {% assign link = section.settings[link] %}

            <div class="right-banner__item relative overflow-hidden{% if image == blank %} right-banner__item--placeholder{% endif %}">
              {% if image != blank %}
                {% if link != blank %}
                  <a class="right-banner__item__link" href="{{ link }}" {% if section.settings.open_in_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}>
                {% endif %}
                {%- render 'image', image: image, sizes: '100vw', link: link -%}
                {% if link != blank %}
                  </a>
                {% endif %}
              {%- else -%}
                {{ 'collection-' | append: i | placeholder_svg_tag: 'placeholder-svg placeholder-svg--bg' }}
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
</div>

{%- stylesheet -%}
  .slideshow .swiper:has(.swiper-pagination) {
    padding-bottom: 0;
  }

  .slideshow .swiper-pagination {
    --swiper-pagination-bottom: 4rem;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: auto;

    &.swiper-pagination-pos--outside {
      position: static;
      transform: none;
      margin-top: var(--margin-3xl);
    }
  }

  .slideshow .swiper-slide {
    height: auto;
  }

  .slideshow .slideshow__slides {
    height: var(--hero-min-height, auto);
  }

  .slideshow :is(.swiper-actions--bottom_center, .swiper-actions--bottom_right) {
    position: absolute;
    left: 50%;
    bottom: 1rem;
    transform: translateX(-50%);
    z-index: 1;

    .swiper-btns-wrap {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: var(--button-gap);
    }

    .swiper-pagination,
    .swiper-button {
      position: relative;
      transform: none;
      margin: 0;
      inset: unset;
    }

    .swiper-button-prev {
      order: -1;
      flex-shrink: 0;
    }

    .swiper-pagination {
      order: 0;
    }

    .swiper-button-next {
      order: 1;
      flex-shrink: 0;
    }

    @media screen and (min-width: 750px) {
      bottom: 2rem;
    }

    @media screen and (min-width: 1280px) {
      bottom: 4rem;
    }
  }

  .slideshow .swiper-actions--bottom_right .swiper-btns-wrap {
    justify-content: flex-end;
  }

  .slideshow .swiper-pagination-fraction {
    font-weight: var(--font-heading--family);
    letter-spacing: 0.02em;
    padding: 0 0 1.2rem;

    &:before {
      content: '';
      display: block;
      width: 100%;
      height: 2px;
      background-color: var(--pagination-color);
      position: absolute;
      bottom: 0;
      left: 0;
      z-index: 1;
    }
  }

  .slideshow .swiper-actions--bottom_right .swiper-pagination-fraction {
    width: min(32rem, 100%);
    text-align: left;
  }

  .slideshow:has(.swiper-pagination-fraction) .slide__content {
    padding-bottom: calc(var(--arrow-height) + 1.2rem);
  }

  .slideshow:is(.slideshow--has-categories, .slideshow--has-right-banner) {
    --slideshow-categories-and-banner-gap: 1rem;
    margin-inline: calc(var(--slideshow-categories-and-banner-gap) * -0.5);
    row-gap: var(--slideshow-categories-and-banner-gap);
    > * {
      padding-inline: calc(var(--slideshow-categories-and-banner-gap) * 0.5);
    }
  }

  .slideshow.slideshow--has-right-banner .right-banner {
    flex: 0 0 var(--w-right-banner, 0rem);
    max-width: var(--w-right-banner, 0rem);
  }

  :is(.slideshow.slideshow--has-right-banner, .slideshow.slideshow--has-categories) .slideshow__container {
    flex: 1 1 var(--w-container, calc(100% - var(--w-left-categories, 0rem) - var(--w-right-banner, 0rem)));
    max-width: var(--w-container, calc(100% - var(--w-left-categories, 0rem) - var(--w-right-banner, 0rem)));
  }

  .slideshow.slideshow--has-categories.slideshow--has-right-banner {
    --w-right-banner: 100%;
  }

  @media (max-width: 1024px) {
    .slideshow.slideshow--has-categories .slideshow__container {
      order: -1;
    }

    .slideshow .block-categories-slider {
      order: 0;
    }
  }

  @media (max-width: 1439px) {
    .slideshow.slideshow--has-categories.slideshow--has-right-banner .slideshow__container {
      order: -1;
    }

    .slideshow.slideshow--has-categories.slideshow--has-right-banner .right-banner {
      order: 0;
    }

    .slideshow.slideshow--has-categories.slideshow--has-right-banner .block-categories-slider {
      order: 1;
    }

    .slideshow.slideshow--has-categories.slideshow--has-right-banner {
      --w-container: calc(100% - var(--w-right-banner));
    }
  }

  @media (max-width: 549px) {
    .slideshow.slideshow--has-categories.slideshow--has-right-banner {
      --w-container: 100%;
    }
  }

  @media (min-width: 550px) {
    .slideshow.slideshow--has-categories.slideshow--has-right-banner {
      --w-left-categories: 100%;
      --w-right-banner: 40%;
    }
  }

  @media (min-width: 1025px) {
    .slideshow.slideshow--has-categories {
      --w-left-categories: 30.5rem;
    }

    .slideshow.slideshow--has-categories .block-categories-slider {
      flex: 0 0 var(--w-left-categories, 0rem);
      max-width: var(--w-left-categories, 0rem);
    }

    .slideshow.slideshow--has-right-banner {
      --w-right-banner: 52rem;
    }

    .slideshow.slideshow--has-right-banner .right-banner__grid {
      --card-grid-gap: var(--slideshow-categories-and-banner-gap);
    }
  }

  @media (min-width: 1440px) {
    .slideshow.slideshow--has-categories.slideshow--has-right-banner {
      --w-left-categories: 20%;
      --w-right-banner: 32%;
    }
  }

  @media (min-width: 1600px) {
    .slideshow.slideshow--has-categories.slideshow--has-right-banner {
      --w-left-categories: 30.5rem;
      --w-right-banner: 52rem;
    }
  }

  .block-categories-slider .wrapper-category {
    padding: 2rem 2rem 1.7rem;
    background-color: #fff;
    box-shadow: 0 2px 1.1rem #0000001a;
    border-radius: 1rem;
  }

  .block-categories-slider .categories-slider--title {
    text-transform: unset;
    margin-bottom: 0.5rem;
    border-bottom: 0.1rem solid var(--background-color);

    span {
      padding: 0.6rem 2rem;
      border-radius: 0.6rem 0.6rem 0 0;
      letter-spacing: 0.02em;
      background-color: var(--background-color);
    }
  }

  .block-categories-slider .categories-slider--list {
    li {
      min-height: 7.2rem;

      a {
        display: flex;
        align-content: space-around;
        line-height: 2.4rem;
        color: #202020;

        img {
          max-width: 2.4rem;
          margin-bottom: 0.5rem;
          padding-top: 0.5rem;
          margin-inline: auto;
        }
      }

      .text-menu {
        overflow: hidden;
        white-space: normal;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        text-overflow: ellipsis;
        -webkit-box-orient: vertical;
      }
    }

    @media screen and (min-width: 1025px) {
      li {
        border-top: 0.1rem solid #f5f5f5;
        border-right: 0.1rem solid #f5f5f5;
      }

      li:nth-child(1),
      li:nth-child(2) {
        border-top: 0;
      }

      li:nth-child(2n) {
        border-right: 0;
      }
    }

    @media (max-width: 1024px) {
      gap: 0.5rem;
      scroll-snap-type: x mandatory;
      padding-bottom: 10px;
      z-index: 1;

      li {
        scroll-snap-align: start;
        scroll-snap-stop: always;
        flex: 0 0 18%;
        max-width: 18%;
      }
    }

    @media (max-width: 549px) {
      li {
        flex: 0 0 29%;
        max-width: 29%;
      }
    }
  }

  /* Stack in mobile */
  @media screen and (max-width: 749px) {
    .slideshow.slideshow--stack-mobile .slideshow__slides {
      min-height: auto;
    }

    .slideshow.slideshow--stack-mobile .slide__image-container {
      min-height: var(--hero-min-height, auto);
      position: relative;
    }

    .slideshow--stack-mobile .slideshow__slide {
      flex-direction: column;
    }

    .slideshow .slideshow__slides {
      height: var(--hero-min-height-mb, auto);
    }
  }
{%- endstylesheet -%}

{% schema %}
{
  "name": "Slideshow",
  "class": "section--has-background",
  "blocks": [{ "type": "_slide" }],
  "settings": [
    {
      "type": "header",
      "content": "t:content.layout"
    },
    {
      "type": "select",
      "id": "slideshow_type",
      "label": "t:settings.layout_type",
      "options": [
        {
          "value": "default",
          "label": "t:options.default"
        },
        {
          "value": "masonry",
          "label": "Masonry"
        }
      ],
      "default": "default"
    },
    {
      "type": "header",
      "content": "t:content.size"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "t:settings.width",
      "options": [
        {
          "value": "page-width",
          "label": "t:options.page"
        },
        {
          "value": "full-width",
          "label": "t:options.full"
        },
        {
          "value": "custom",
          "label": "Custom"
        }
      ],
      "default": "page-width"
    },
    {
      "type": "range",
      "id": "page_width_custom",
      "min": 1000,
      "max": 2000,
      "step": 10,
      "default": 1570,
      "unit": "px",
      "label": "t:settings_schema.layout.settings.page_width.label",
      "visible_if": "{{ section.settings.section_width == 'custom' }}"
    },
    {
      "type": "select",
      "id": "slide_height",
      "label": "t:settings.height",
      "options": [
        {
          "value": "height_first_slide",
          "label": "t:options.adapt_to_first_slide_height"
        },
        {
          "value": "adapt_image",
          "label": "t:options.adapt_to_first_image"
        },
        {
          "value": "small",
          "label": "t:options.small"
        },
        {
          "value": "medium",
          "label": "t:options.medium"
        },
        {
          "value": "large",
          "label": "t:options.large"
        },
        {
          "value": "full-screen",
          "label": "t:options.full_screen"
        },
        {
          "value": "custom",
          "label": "t:options.custom"
        }
      ],
      "default": "medium",
      "visible_if": "{{ section.settings.slideshow_type != 'masonry' }}"
    },
    {
      "type": "range",
      "id": "section_height_custom",
      "label": "t:settings.custom_height",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 100,
      "unit": "%",
      "visible_if": "{{ section.settings.slide_height == 'custom' and section.settings.slideshow_type != 'masonry' }}"
    },
    {
      "type": "select",
      "id": "slide_height_mb",
      "label": "t:settings.mobile_height",
      "options": [
        {
          "value": "height_first_slide",
          "label": "t:options.adapt_to_first_slide_height"  
        },
        {
          "value": "adapt_image",
          "label": "t:options.adapt_to_first_image"
        },
        {
          "value": "small",
          "label": "t:options.small"
        },
        {
          "value": "medium",
          "label": "t:options.medium"
        },
        {
          "value": "large",
          "label": "t:options.large"
        },
        {
          "value": "full-screen",
          "label": "t:options.full_screen"
        },
        {
          "value": "custom",
          "label": "t:options.custom"
        }
      ],
      "default": "medium",
      "visible_if": "{{ section.settings.slideshow_type != 'masonry' }}"
    },
    {
      "type": "header",
      "content": "Masonry layout",
      "visible_if": "{{ section.settings.slideshow_type == 'masonry' }}"
    },
    {
      "type": "range",
      "id": "masonry_image_radisus",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:settings.border_radius",
      "default": 0,
      "visible_if": "{{ section.settings.slideshow_type == 'masonry' }}"
    },
    {
      "type": "range",
      "id": "masonry_gap",
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px",
      "label": "Gap",
      "default": 22,
      "visible_if": "{{ section.settings.slideshow_type == 'masonry' }}"
    },
    {
      "type": "range",
      "id": "masonry_column_left",
      "min": 10,
      "max": 100,
      "step": 1,
      "unit": "%",

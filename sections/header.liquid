{%- liquid
  assign sec_stts = section.settings

  assign order = 'logo,menu,account,search,mobile_search,actions'

  if shop.customer_accounts_enabled
    assign order = 'mobile_search,logo,menu,account,search,actions'
  endif

  assign rows = 'top,bottom' | split: ','
  assign search_style = settings.search_style

  capture logo
    render 'header-logo', header_settings: sec_stts, blocks: section.blocks
  endcapture

  capture menu
    render 'header-menu', header_settings: sec_stts, blocks: section.blocks
  endcapture

  capture account
    render 'header-account', settings: sec_stts, enable_account: sec_stts.show_account
  endcapture

  capture actions
    render 'header-functions', settings: sec_stts, blocks: section.blocks, enable_menu_drawer: true, enable_localization: true, enable_search: true, enable_account: true, enable_cart: true
  endcapture

  capture search
    render 'header-search', input_id: 'Search-In-Modal', search_type: search_type
  endcapture

  # Skip mobile search under specific conditions:
  # Always render if search_row is bottom
  # Don't render when shop.customer_accounts_enabled is false and search_position is left and search_style is not none
  assign skip_mobile_search = false
  if shop.customer_accounts_enabled == false and sec_stts.search_position == 'left' and search_style != 'none'
    assign skip_mobile_search = true
  endif

  if sec_stts.search_row == 'bottom' or search_style != 'none' and skip_mobile_search == false
    # Mobile search duplicate for when search is not in the right order for mobile layout
    capture mobile_search
      render 'header-search', class: 'md:hidden', style: search_style
    endcapture
  endif

  if sec_stts.sticky_header_type != 'none'
    assign is_sticky_header = true
    assign header_wrapper = 'sticky-header'
  else
    assign header_wrapper = 'div'
  endif

  assign class = 'header'

  if transparent_color_scheme
    assign class = class | append: ' ' | append: transparent_color_scheme
  endif

  if section.settings.color_scheme_top.settings.background.alpha != 1
    assign class = class | append: ' ' | append: 'header--inherit-color-scheme-on-menu-open'
  endif

  if header_height_class
    assign class = class | append: ' ' | append: header_height_class
  endif

  if collapse_header_paddings_class
    assign class = class | append: ' ' | append: collapse_header_paddings_class
  endif

  for block in section.blocks
    if section.type == '@app'
      assign has_app_block = true
    endif
  endfor
-%}

{%- style -%}
  .header {
    padding-block: {{ sec_stts.padding_top | times: 0.5 | round: 0 }}px {{ sec_stts.padding_bottom | times: 0.5 | round: 0 }}px;
  }
  .section-header-main {
    position: sticky; /* This is for fixing a Safari z-index issue. PR #2147 */
    margin-bottom: {{ sec_stts.margin_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-header-main {
      margin-bottom: {{ sec_stts.margin_bottom }}px;
    }
  }
  @media screen and (min-width: 1025px) {
    .header {
      padding-block: {{ sec_stts.padding_top }}px {{ sec_stts.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<{{ header_wrapper }}
  class="
    header-wrapper
    {% if sec_stts.show_line_separator %} header-wrapper--border-bottom{% endif %}
  "
  {% if is_sticky_header %}
    data-sticky-type="{{ sec_stts.sticky_header_type }}"
  {% endif %}
>
  <header
    class="
      header
      header--{{ sec_stts.logo_position }}
      header--mobile-{{ sec_stts.mobile_logo_position }}
      {% if sec_stts.menu != blank %} header--has-menu{% endif %}
      {% if has_app_block %} header--has-app{% endif %}
      {% if shop.customer_accounts_enabled %} header--has-account{% endif %}
    "
  >
    <div class="group-block group-block--{{ section.id }}">
      {% comment %}
        {%- case sec_stts.logo_position -%}
          {%- when 'style1' -%}
            {% render 'header-style-1', blocks: section.blocks, header_settings: sec_stts %}
          {%- when 'style2' -%}
            {% render 'header-style-2', blocks: section.blocks, header_settings: sec_stts %}
        {%- endcase -%}
      {% endcomment %}
      {% for row in rows %}
        {% liquid
          assign scheme = 'color_scheme_' | append: row
          assign class = 'header__row header__row--[row] color-[row_scheme] section section--full-width-margin section--[section-width]' | replace: '[row]', row | replace: '[row_scheme]', sec_stts[scheme] | replace: '[section-width]', sec_stts.section_width

          case row
            when 'top'
              assign first = mobile_menu

              if bottom_row_blocks.size > 0 and section.settings.divider_size == 'page-width'
                assign class = class | append: ' divider--page-width'
              endif

              if bottom_row_blocks.size > 0
                assign border_bottom_setting_id = 'divider_width'
              else
                assign border_bottom_setting_id = 'border_width'
              endif
            when 'bottom'
              assign first = ''
              assign class = class | append: ' mobile:hidden'

              assign border_bottom_setting_id = 'border_width'
          endcase

          assign style = '--border-bottom-width: [width]px; ' | replace: '[width]', section.settings[border_bottom_setting_id]

          if row == 'top'
            assign style = style | append: '--border-bottom-width-mobile: [width]px; ' | replace: '[width]', section.settings.border_width
          endif
        %}

        {% capture content %}
          {% render 'header-row',
            row: row,
            order: order,
            settings: sec_stts,
            first: first,
            logo: logo,
            menu: menu,
            actions: actions,
            account: account,
            search: search,
            mobile_search: mobile_search
          %}
        {% endcapture %}

        {% assign content = content | strip %}
        {% if content != blank %}
          <div
            class="{{ class | strip }} {{ order }}"
            {%- if style != blank -%}
              style="{{ style | strip }}"
            {%- endif -%}
          >
            <div class="header__columns spacing-style">
              {{ content }}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </header>
</{{ header_wrapper }}>

